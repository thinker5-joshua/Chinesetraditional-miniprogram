/* 菜根谭摘录样式 - 传统中国风 */

page {
  background: #f5f5f0;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', serif;
  min-height: 100vh;
  color: #333;
}

.app-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部导航 */
.app-header {
  background: #8b4513;
  color: #fff;
  padding: 80rpx 40rpx 40rpx;
  text-align: center;
  border-bottom: 1rpx solid #d4af37;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  max-width: 700rpx;
  margin: 0 auto;
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  color: #fff;
  letter-spacing: 4rpx;
  display: block;
}

.app-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 400;
  color: #fff;
  line-height: 1.5;
  display: block;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx 20rpx;
  max-width: 700rpx;
  margin: 0 auto;
  width: 100%;
  min-height: 0;
  overflow: hidden;
}

/* 名言卡片容器 */
.quote-container {
  width: 100%;
  flex: 0 1 auto;
  display: flex;
  align-items: stretch;
  margin-bottom: 40rpx;
  min-height: 0;
  overflow: hidden;
  position: relative;
}

.quote-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  border: 1rpx solid #e8e8e8;
  flex: 1;
}

.quote-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 名言内容 */
.quote-content {
  text-align: center;
  position: relative;
  z-index: 2;
}

.quote-summary {
  font-size: 30rpx;
  line-height: 1.5;
  color: #8b4513;
  margin-bottom: 24rpx;
  text-align: left;
  font-style: italic;
  opacity: 0.9;
  padding-left: 10rpx;
  border-left: 4rpx solid #d4af37;
  display: inline-block;
  align-self: flex-start;
}

.quote-text {
  font-size: 36rpx;
  line-height: 1.7;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.quote-source {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
  font-weight: 400;
  font-style: italic;
}

/* 原文详情页 */
.original-detail-page {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  background: #8b4513;
  color: #fff;
}

.back-btn {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx;
  gap: 8rpx;
}

.back-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.back-text {
  font-size: 24rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
}

.header-placeholder {
  width: 80rpx;
}

.detail-content {
  flex: 1;
  padding: 40rpx 30rpx 80rpx 30rpx;
  overflow-y: auto;
  line-height: 1.8;
  white-space: pre-line;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  scrollbar-color: #d4af37 #f5f5f0;
  max-height: calc(100vh - 300rpx);
}

.detail-quote {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.detail-quote-text {
  font-size: 38rpx;
  line-height: 1.7;
  color: #333;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}

.detail-quote-source {
  font-size: 26rpx;
  color: #666;
  font-style: italic;
}

.detail-original {
  background: #f5f5f0;
  padding: 30rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #d4af37;
}

.detail-original-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #8b4513;
  margin-bottom: 16rpx;
  display: block;
}

.detail-original-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  font-weight: 400;
}

/* 次要操作按钮区 */
.secondary-action-bar {
  background: #8b4513;
  padding: 30rpx 30rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #d4af37;
}

.secondary-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 15rpx;
  width: 100%;
  max-width: 700rpx;
  margin: 0 auto;
}

.secondary-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: rgba(245, 245, 240, 0.9);
  border: 1rpx solid rgba(212, 175, 55, 0.6);
  border-radius: 8rpx;
  padding: 20rpx 25rpx;
  font-size: 24rpx;
  color: #8b4513;
  transition: all 0.2s ease;
  flex: 1;
  gap: 10rpx;
  min-width: 180rpx;
  max-width: 200rpx;
  white-space: nowrap;
}

.secondary-btn:active {
  transform: scale(0.95);
  background: rgba(245, 245, 240, 0.7);
}

.secondary-btn:active {
  transform: scale(0.95);
  background: rgba(245, 245, 240, 0.7);
}

.secondary-icon {
  font-size: 32rpx;
  color: #8b4513;
  opacity: 0.8;
}

.secondary-text {
  font-size: 24rpx;
  color: #8b4513;
  font-weight: 500;
  opacity: 0.9;
}

/* 主要操作按钮栏 - 固定在底部 */
.main-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #8b4513;
  padding: 30rpx 30rpx calc(30rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #d4af37;
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-hint {
  margin-top: 15rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  font-weight: 400;
}

.main-actions {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
  max-width: 700rpx;
  margin: 0 auto;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(245, 245, 240, 0.9);
  border: 1rpx solid rgba(212, 175, 55, 0.6);
  border-radius: 8rpx;
  padding: 20rpx 25rpx;
  font-size: 24rpx;
  color: #8b4513;
  transition: all 0.2s ease;
  flex: 1;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(245, 245, 240, 0.7);
}

.nav-btn {
  min-width: 180rpx;
  max-width: 200rpx;
  flex-direction: row;
  justify-content: center;
  gap: 10rpx;
  white-space: nowrap;
}

.nav-icon {
  font-size: 32rpx;
  font-weight: bold;
  color: #8b4513;
}

.nav-text {
  font-size: 24rpx;
  color: #8b4513;
  font-weight: 500;
}

.favorite-btn {
  min-width: 140rpx;
  max-width: 160rpx;
  flex-direction: row;
  justify-content: center;
  gap: 10rpx;
  white-space: nowrap;
}

.favorite-btn.favorited {
  background: rgba(212, 175, 55, 0.8);
  border-color: rgba(184, 134, 11, 0.8);
  color: #8b4513;
}

.favorite-btn.favorited .action-icon,
.favorite-btn.favorited .action-text {
  color: #8b4513;
  opacity: 1;
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
  color: #8b4513;
  opacity: 0.8;
}

.action-text {
  font-size: 22rpx;
  color: #8b4513;
  font-weight: 500;
  opacity: 0.9;
}



/* 加载动画 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f5f5f0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #8b4513;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner text {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
}

/* 收藏列表弹窗 */
.favorites-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.favorites-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
}

.modal-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 30rpx;
  max-width: 680rpx;
  width: calc(100% - 60rpx);
  max-height: 75vh;
  overflow-y: auto;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.95);
  transition: transform 0.3s ease;
  border: 1rpx solid #e8e8e8;
}

.favorites-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8b4513;
}

/* 收藏列表 */
.favorites-list {
  max-height: 55vh;
  overflow-y: auto;
}

.favorite-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  cursor: pointer;
  transition: background 0.2s ease;
  position: relative;
}

.favorite-item:active {
  background: #f5f5f0;
}

.favorite-content {
  flex: 1;
  margin-right: 20rpx;
}

.favorite-quote {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
  font-weight: 500;
}

.favorite-source {
  font-size: 22rpx;
  color: #666;
  font-weight: 400;
}

.remove-favorite-btn {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #8b4513;
  border: none;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.remove-favorite-btn:active {
  transform: scale(0.9);
  background: #a0522d;
}

.empty-favorites {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  color: #d4af37;
  margin-bottom: 20rpx;
  display: block;
}

.empty-title {
  font-size: 28rpx;
  color: #8b4513;
  margin-bottom: 10rpx;
  display: block;
  font-weight: 600;
}

.empty-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: block;
  font-weight: 400;
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeIn {
  from { 
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .quote-card {
    padding: 40rpx 30rpx;
    min-height: 600rpx;
  }
  
  .quote-text {
    font-size: 32rpx;
  }
  
  .navigation-controls {
    flex-direction: column;
    gap: 40rpx;
  }
  
  .nav-btn {
    width: 100%;
    margin: 0;
  }
  
  .action-buttons {
    justify-content: center;
  }
}