<view class="wuxing-container">
  <!-- Tab标签区域 -->
  <view class="tab-container">
    <view class="tab-list">
      <view 
        class="tab-item {{currentTab === item.id ? 'active' : ''}}"
        wx:for="{{activeTabs}}" 
        wx:key="id"
        bindtap="onTabChange"
        data-tab="{{item.id}}"
      >
        <text class="tab-title">{{item.title}}</text>
      </view>
    </view>
  </view>

  <!-- 图表和知识的统一滚动容器 -->
  <scroll-view class="scrollable-content" scroll-y="true">
    <!-- 图表显示容器 -->
    <view class="chart-display-container"
          bindtouchstart="onTouchStart"
          bindtouchmove="onTouchMove"
          bindtouchend="onTouchEnd">
      <!-- 五行图表 -->
      <view wx:if="{{currentTab === 'wuxing'}}" class="chart-wrapper">
        <view class="mystical-frame">
          <canvas 
            class="mystical-canvas" 
            canvas-id="wuxingCanvas"
            style="width: 700rpx; height: 700rpx;"
          ></canvas>
          <!-- 五行元素按钮覆盖层 -->
          <view class="element-buttons-overlay">
            <view 
              class="element-button"
              wx:for="{{wuxingElements}}" 
              wx:key="name"
              style="{{item.style}}"
              bindtap="onElementTap"
              data-element="{{item.name}}"
              data-tab="wuxing"
            >
            </view>
          </view>
        </view>
      </view>
      
      <!-- 五方图表 -->
      <view wx:elif="{{currentTab === 'wufang'}}" class="chart-wrapper">
        <view class="mystical-frame">
          <canvas 
            class="mystical-canvas" 
            canvas-id="wufangCanvas"
            style="width: 700rpx; height: 700rpx;"
          ></canvas>
          <!-- 五方元素按钮覆盖层 -->
          <view class="element-buttons-overlay">
            <view 
              class="element-button"
              wx:for="{{wufangElements}}" 
              wx:key="name"
              style="{{item.style}}"
              bindtap="onElementTap"
              data-element="{{item.name}}"
              data-tab="wufang"
            >
            </view>
          </view>
        </view>
      </view>
      
      <!-- 五色图表 -->
      <view wx:elif="{{currentTab === 'wuse'}}" class="chart-wrapper">
        <view class="mystical-frame">
          <canvas 
            class="mystical-canvas" 
            canvas-id="wuseCanvas"
            style="width: 700rpx; height: 700rpx;"
          ></canvas>
          <!-- 五色元素按钮覆盖层 -->
          <view class="element-buttons-overlay">
            <view 
              class="element-button"
              wx:for="{{wuseElements}}" 
              wx:key="name"
              style="{{item.style}}"
              bindtap="onElementTap"
              data-element="{{item.name}}"
              data-tab="wuse"
            >
            </view>
          </view>
        </view>
      </view>
      
      <!-- 五脏图表 -->
      <view wx:elif="{{currentTab === 'wuzang'}}" class="chart-wrapper">
        <view class="mystical-frame">
          <canvas 
            class="mystical-canvas" 
            canvas-id="wuzangCanvas"
            style="width: 700rpx; height: 700rpx;"
          ></canvas>
          <!-- 五脏元素按钮覆盖层 -->
          <view class="element-buttons-overlay">
            <view 
              class="element-button"
              wx:for="{{wuzangElements}}" 
              wx:key="name"
              style="{{item.style}}"
              bindtap="onElementTap"
              data-element="{{item.name}}"
              data-tab="wuzang"
            >
            </view>
          </view>
        </view>
      </view>
      
      <!-- 五味图表 -->
      <view wx:elif="{{currentTab === 'wuwei'}}" class="chart-wrapper">
        <view class="mystical-frame">
          <canvas 
            class="mystical-canvas" 
            canvas-id="wuweiCanvas"
            style="width: 700rpx; height: 700rpx;"
          ></canvas>
          <!-- 五味元素按钮覆盖层 -->
          <view class="element-buttons-overlay">
            <view 
              class="element-button"
              wx:for="{{wuweiElements}}" 
              wx:key="name"
              style="{{item.style}}"
              bindtap="onElementTap"
              data-element="{{item.name}}"
              data-tab="wuwei"
