/* 弹出框样式 - 简洁优雅 */

/* 遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden; /* 防止遮罩层溢出 */
}

/* 弹出框容器 */
.modal-container {
  width: calc(100% - 40rpx); /* 减去padding，避免超出 */
  max-width: 660rpx; /* 稍微减小最大宽度 */
  max-height: 90vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalShow 0.3s ease-out;
  box-sizing: border-box;
  position: relative;
  margin: 0 auto;
  contain: layout; /* 优化布局性能 */
}

/* 弹出框动画 */
@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 弹出框头部 */
.modal-header {
  padding: 40rpx 32rpx 24rpx;
  text-align: center;
  background: linear-gradient(135deg, #fafbfc 0%, #f1f3f5 100%);
  border-bottom: 1rpx solid #e9ecef;
  flex-shrink: 0;
}

.element-symbol {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: 4rpx solid #fff;
  position: relative;
}

.symbol-text {
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

.element-title {
  margin-top: 16rpx;
}

.element-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.element-pinyin {
  font-size: 24rpx;
  color: #6c757d;
  font-style: italic;
  margin-top: 4rpx;
}

/* 内容区域 */
.modal-content {
  flex: 1;
  padding: 0 32rpx 20rpx;
  max-height: calc(90vh - 280rpx);
  overflow-x: hidden; /* 防止内容冲出右侧 */
  overflow-y: auto; /* 允许垂直滚动 */
  box-sizing: border-box;
  width: 100%;
  /* 移除可能的双滚动条 */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
}

.content-section {
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f1f3f5;
  max-width: 100%; /* 确保内容不超出容器 */
  box-sizing: border-box;
  overflow-wrap: break-word; /* 处理长文本换行 */
  word-break: break-word; /* 确保长单词正确换行 */
  hyphens: auto; /* 支持连字符换行 */
}

.content-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 36rpx; /* 从32rpx增大到36rpx */
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

/* 描述文本 */
.description-text {
  font-size: 32rpx; /* 从28rpx增大到32rpx */
  line-height: 1.6;
  color: #495057;
  text-align: justify;
  font-weight: 400;
  word-wrap: break-word;
  overflow-wrap: break-word;
  word-break: break-word;
  hyphens: auto;
  max-width: 100%;
  box-sizing: border-box;
}

/* 属性列表 */
.attribute-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.attribute-item {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  color: #495057;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.attribute-text {
  font-size: 28rpx; /* 从24rpx增大到28rpx */
  font-weight: 500;
}

/* 五行关系 */
.wuxing-relations {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: center; /* 居中显示 */
}

.relation-card {
  padding: 16rpx 24rpx; /* 减小padding，更紧凑 */
  border-radius: 16rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
  width: auto; /* 自动宽度 */
  min-width: 200rpx; /* 最小宽度 */
  max-width: 280rpx; /* 最大宽度，避免过宽 */
}

.relation-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.relation-card:active::before {
  left: 100%;
}

.relation-card.sheng {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: #fff;
}

.relation-card.ke {
  background: linear-gradient(135deg, #F44336 0%, #d32f2f 100%);
  color: #fff;
}

.relation-label {
  font-size: 30rpx; /* 稍微增大 */
  font-weight: 600;
  margin-bottom: 6rpx; /* 减小间距 */
}

.relation-value {
  font-size: 34rpx; /* 稍微增大 */
  font-weight: 700;
  margin-bottom: 8rpx; /* 减小间距 */
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.relation-desc {
  font-size: 26rpx; /* 稍微增大 */
  opacity: 0.95;
  line-height: 1.3; /* 减小行高，更紧凑 */
}

/* 自然对应网格 */
.nature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.nature-item {
  background: #f8f9fa;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  text-align: center;
  border: 1rpx solid #e9ecef;
}

.nature-label {
  font-size: 24rpx; /* 从22rpx增大到24rpx */
  color: #6c757d;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.nature-value {
  font-size: 28rpx; /* 从26rpx增大到28rpx */
  color: #2c3e50;
  font-weight: 600;
}

/* 养生建议 */
.health-tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.health-tip {
  background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
  color: #155724;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height: 1.5;
  border-left: 4rpx solid #28a745;
}

.tip-text {
  font-size: 28rpx; /* 从24rpx增大到28rpx */
  line-height: 1.5;
  word-wrap: break-word;
  overflow-wrap: break-word;
  word-break: break-word;
  max-width: 100%;
  box-sizing: border-box;
}

/* 文化意义 */
.cultural-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.cultural-item {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
  color: #856404;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height: 1.5;
  border-left: 4rpx solid #ffc107;
  text-align: justify;
}

.cultural-text {
  font-size: 28rpx; /* 从24rpx增大到28rpx */
  line-height: 1.5;
  word-wrap: break-word;
  overflow-wrap: break-word;
  word-break: break-word;
  max-width: 100%;
  box-sizing: border-box;
}

/* 相关元素 */
.related-elements {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.related-element {
  background: #f8f9fa;
  color: #495057;
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  text-align: center;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.related-element:active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  transform: scale(0.95);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.related-symbol {
  font-size: 36rpx; /* 从32rpx增大到36rpx */
  margin-bottom: 6rpx;
}

.related-name {
  font-size: 24rpx; /* 从20rpx增大到24rpx */
  font-weight: 500;
}

/* 底部固定区域 */
.modal-footer {
  padding: 20rpx 28rpx; /* 减小padding，避免超出 */
  background: linear-gradient(135deg, #fafbfc 0%, #f1f3f5 100%);
  border-top: 1rpx solid #e9ecef;
  flex-shrink: 0;
  position: relative; /* 确保正确显示 */
  z-index: 10; /* 确保在内容之上 */
  width: calc(100% - 8rpx); /* 防止超出容器 */
  box-sizing: border-box;
}

.back-button {
  width: 50%; /* 页面宽度的一半 */
  margin: 0 auto; /* 居中显示 */
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  position: relative; /* 确保按钮位置固定 */
  z-index: 20; /* 确保按钮在最上层 */
  overflow: hidden; /* 防止内容溢出 */
}

.back-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.back-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  display: block;
  width: 100%;
  box-sizing: border-box;
}

/* 小屏幕适配 */
@media (max-width: 600rpx) {
  .modal-overlay {
    padding: 20rpx;
  }
  
  .modal-container {
    max-width: 95vw; /* 确保在小屏幕上不超出边界 */
  }
  
  .modal-content {
    padding: 0 20rpx 10rpx;
  }
  
  .content-section {
    padding: 24rpx 0;
  }
  
  .related-elements {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .nature-grid {
    grid-template-columns: 1fr;
  }
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  text-align: center;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
}