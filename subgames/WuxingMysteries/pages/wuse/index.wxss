/* 五色页面样式 - 继承主样式 */
@import "../../index.wxss";

/* 五色卡片 */
.wuse-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 30rpx;
}

.color-card {
  display: flex;
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.color-card.active {
  transform: scale(1.02);
  border-color: #FFD700;
  box-shadow: 0 10rpx 30rpx rgba(255, 215, 0, 0.2);
}

.color-preview {
  width: 120rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), transparent);
  position: relative;
}

.color-preview::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60rpx;
  height: 60rpx;
  background: currentColor;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.3);
}

.color-card .card-content {
  flex: 1;
  padding: 30rpx;
}

.color-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
  display: block;
}

.related-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-top: 15rpx;
}