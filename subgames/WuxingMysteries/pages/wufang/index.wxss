/* 五方页面样式 - 继承主样式 */
@import "../../index.wxss";

/* 五方卡片 */
.wufang-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 30rpx;
}

.direction-card {
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.direction-card.active {
  transform: translateX(10rpx);
  border-color: #FFD700;
  box-shadow: -5rpx 15rpx 30rpx rgba(255, 215, 0, 0.2);
}

.card-header {
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
}

.direction-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}

.wuxing-name {
  font-size: 24rpx;
  color: #fff;
  opacity: 0.9;
  background: rgba(0, 0, 0, 0.3);
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
}

.card-content {
  padding: 25rpx 30rpx;
}

.description {
  font-size: 26rpx;
  color: #d4d4d4;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: block;
}

.detail-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-item {
  font-size: 24rpx;
  color: #b4b4b4;
  display: block;
}