/* 加载页面样式 */
.loading-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 215, 0, 0.2);
  border-top: 6rpx solid #FFD700;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #FFD700;
  font-weight: 500;
  opacity: 0.9;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}