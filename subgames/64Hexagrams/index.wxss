/* 基础样式 */
page {
  font-family: "SimSun", "STSong", "Noto Serif SC", serif;
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 50%, #f5f1e9 100%);
  color: #3a2c1e;
  line-height: 1.6;
  position: relative;
}

page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 20%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(205, 133, 63, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(218, 165, 32, 0.02) 0%, transparent 60%);
  pointer-events: none;
  z-index: 0;
}

.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 8px;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 10px;
  padding: 10px;
  background: linear-gradient(135deg, rgba(211, 199, 167, 0.4), rgba(205, 133, 63, 0.3));
  border: 3px solid #b8a57e;
  border-radius: 15px;
  box-shadow: 0 6px 15px rgba(139, 69, 19, 0.2);
  position: relative;
  z-index: 1;
}

.title {
  font-size: 24px;
  color: #8b4513;
  margin-bottom: 5px;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.15);
  font-weight: bold;
  display: block;
  letter-spacing: 2px;
  line-height: 1.2;
}

.subtitle {
  font-size: 14px;
  color: #8b4513;
  letter-spacing: 1.5px;
  display: block;
  line-height: 1.4;
  font-weight: bold;
  margin-top: 3px;
}

/* 说明容器（包含说明文字和去学卦按钮） */
.instruction-container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 15px;
  margin-bottom: 20px;
  padding: 15px 20px;
  background-color: rgba(211, 199, 167, 0.3);
  border: 2px solid rgba(184, 165, 126, 0.5);
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.1);
  position: relative;
  z-index: 1;
  flex-wrap: nowrap;
}

/* 说明文字 */
.instruction-content {
  font-size: 15px;
  color: #8b4513;
  line-height: 1.5;
  flex: 1;
  text-align: left;
  letter-spacing: 0.5px;
  min-width: 0;
  order: 1;
}

/* 行内去学卦按钮 */
.inline-learn-button {
  background-color: #8b4513;
  color: #fff;
  border: 2px solid #b8a57e;
  padding: 18px 12px;
  font-size: 16px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  box-shadow: 0 2px 8px rgba(139, 69, 19, 0.2);
  font-weight: bold;
  letter-spacing: 1px;
  width: auto;
  flex-shrink: 0;
  white-space: nowrap;
  order: 2;
  min-width: 70px;
  max-width: 90px;
}

/* 游戏容器 */
.game-container {
  background-color: rgba(255, 255, 255, 0.95);
  border: 3px solid #b8a57e;
  border-radius: 15px;
  padding: 20px;
  box-shadow: 0 8px 25px rgba(139, 69, 19, 0.15);
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
}



/* 分数板 */
.score-board {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
  padding: 8px 15px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 12px;
  border: 2px solid rgba(184, 165, 126, 0.3);
}

.progress-stars {
  display: flex;
  align-items: center;
  gap: 15px;
}

.progress-label {
  font-size: 14px;
  font-weight: bold;
  color: #8b4513;
}

.stars-container {
  display: flex;
  gap: 8px;
}

.star {
  font-size: 24px;
  color: #ddd;
  transition: all 0.3s ease;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.star.active {
  color: #ffd700;
  text-shadow: 0 2px 4px rgba(255, 215, 0, 0.4);
  transform: scale(1.1);
}

.progress-text {
  font-size: 14px;
  font-weight: bold;
  color: #8b4513;
}

/* 游戏板容器 */
.game-board-container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: 120px;
  margin-bottom: 15px;
  padding: 20px;
  width: 100%;
  min-height: 280px;
  /* 强制保持左右分列布局 */
  flex-direction: row;
  box-sizing: border-box;
}

/* 卦象列 */
.hexagram-column {
  flex: 0 0 auto;
  width: 140px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  min-width: 120px;
}

/* 卦名列 */
.name-column {
  flex: 0 0 auto;
  width: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  min-width: 180px;
  max-width: 220px;
}

/* 卦象方块 */
.hexagram-block {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 50%, #ffffff 100%);
  border: 2px solid #b8a57e;
  border-radius: 12px;
  padding: 12px;
  width: 100%;
  height: 100px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.2);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 匹配状态样式 */
.hexagram-block.matched {
  border-width: 3px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  transform: scale(1.02);
}

.hexagram-block::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(218, 165, 32, 0.05) 0%, transparent 70%);
  transition: all 0.6s ease;
}

.hexagram-block.selected {
  border-color: #cd5c5c;
  background: linear-gradient(145deg, rgba(205, 92, 92, 0.1), rgba(205, 92, 92, 0.05));
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 8px 25px rgba(205, 92, 92, 0.4);
}

.hexagram-block.selected::before {
  background: radial-gradient(circle, rgba(205, 92, 92, 0.1) 0%, transparent 70%);
}

.hexagram-block:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(139, 69, 19, 0.3);
  border-color: #8b4513;
}

.hexagram-block:hover::before {
  transform: rotate(180deg);
}

.hexagram-symbol {
  font-size: 65px;
  margin: 0;
  font-family: "SimSun", monospace;
  line-height: 1;
  letter-spacing: 1px;
  display: block;
  text-align: center;
  color: #2c3e50;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.15);
  font-weight: bold;
}

.hexagram-name-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
  margin-bottom: 4px;
}

.hexagram-name {
  font-size: 20px;
  font-weight: bold;
  color: #8b4513;
  margin: 0;
  display: inline-block;
  letter-spacing: 0.5px;
}

.hexagram-pinyin {
  font-size: 15px;
  color: #6d4c41;
  font-family: Arial, sans-serif;
  margin: 0;
  display: inline-block;
  font-style: italic;
  opacity: 0.8;
}

.hexagram-extra-info {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
  flex-wrap: wrap;
}

.hexagram-alias {
  font-size: 14px;
  color: #8b4513;
  margin: 0;
  display: inline-block;
  letter-spacing: 0.3px;
  font-weight: bold;
}

.hexagram-trigrams {
  font-size: 12px;
  color: #6d4c41;
  margin: 0;
  display: inline-block;
  font-style: normal;
  opacity: 0.9;
}

/* 选择信息 */
.selected-info {
  text-align: center;
  font-size: 13px;
  color: #6d4c41;
  padding: 6px;
  background-color: rgba(211, 199, 167, 0.1);
  border-radius: 6px;
}

/* 行内去学卦按钮悬停效果 */
.inline-learn-button:hover {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(139, 69, 19, 0.3);
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px;
}

.modal-content {
  background-color: #fff;
  border: 2px solid #b8a57e;
  border-radius: 10px;
  padding: 15px;
  max-width: 85%;
  max-height: 80vh;
  overflow-y: auto;
  text-align: center;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.modal-title {
  font-size: 24px;
  color: #8b4513;
  margin-bottom: 10px;
  display: block;
}

.success-message {
  font-size: 14px;
  color: #6d4c41;
  margin-bottom: 10px;
  display: block;
}

/* 卦象信息 */
.hexagram-info {
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 10px;
  padding: 12px;
  margin-bottom: 20px;
}

.hexagram-info-title {
  font-size: 24px;
  color: #8b4513;
  margin-bottom: 15px;
  display: block;
  font-weight: bold;
}

/* 卦象预览列表 */
.hexagram-preview-list {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin: 15px 0;
  flex-wrap: wrap;
}

.hexagram-preview-item {
  background-color: rgba(240, 240, 240, 0.8);
  border-radius: 12px;
  padding: 15px;
  text-align: center;
  width: 120px;
  transition: transform 0.2s, box-shadow 0.2s;
  cursor: pointer;
}

.hexagram-preview-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
}

/* 大型预览样式 */
.hexagram-preview-item.large-preview {
  width: 120px;
  padding: 15px 12px;
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.95), rgba(248, 248, 248, 0.9));
  border: 2px solid #b8a57e;
  box-shadow: 0 4px 15px rgba(139, 69, 19, 0.2);
}

.hexagram-preview-item.large-preview:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 8px 20px rgba(139, 69, 19, 0.3);
  border-color: #8b4513;
}

.preview-symbol {
  margin-bottom: 10px;
  line-height: 1.2;
  font-size: 24px;
  display: block;
}

.hexagram-preview-item.large-preview .preview-symbol {
  font-size: 36px;
  margin-bottom: 10px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
}

.preview-name {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  display: block;
}

.hexagram-preview-item.large-preview .preview-name {
  font-size: 15px;
  font-weight: bold;
  color: #8b4513;
  margin-bottom: 2px;
  letter-spacing: 0.5px;
}

/* 按钮 */
.play-again-button {
  background-color: #8b4513;
  color: #fff;
  border: none;
  padding: 12px 30px;
  font-size: 17px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
}

.play-again-button:hover {
  background-color: #cd853f;
  transform: scale(1.05);
}



/* 响应式设计 */
@media (max-width: 1200px) {
  .game-board-container {
    gap: 60px;
  }
  
  .hexagram-column {
    width: 130px;
    min-width: 110px;
  }
  
  .name-column {
    width: 200px;
    min-width: 170px;
    max-width: 210px;
  }
}

@media (max-width: 900px) {
  .game-board-container {
    gap: 50px;
    padding: 15px;
    min-height: 260px;
  }
  
  .hexagram-column {
    width: 120px;
    min-width: 100px;
  }
  
  .name-column {
    width: 190px;
    min-width: 160px;
    max-width: 200px;
  }
  
  .hexagram-block {
    width: 100%;
    height: 90px;
    padding: 10px;
  }
  
  .hexagram-symbol {
    font-size: 58px;
  }
}

@media (max-width: 768px) {
  .game-board-container {
    flex-direction: row;
    gap: 40px;
    padding: 15px;
    justify-content: center;
    min-height: 240px;
  }
  
  .hexagram-column {
    width: 110px;
    min-width: 90px;
  }
  
  .name-column {
    width: 170px;
    min-width: 140px;
    max-width: 180px;
  }
  
  .hexagram-block {
    width: 100%;
    height: 90px;
    padding: 10px;
  }
  
  .hexagram-symbol {
    font-size: 52px;
  }
  
  .hexagram-name {
    font-size: 18px;
  }
  
  .hexagram-pinyin {
    font-size: 14px;
  }
  
  .hexagram-alias {
    font-size: 12px;
  }
  
  .hexagram-trigrams {
    font-size: 11px;
  }
  
  .score-board {
    justify-content: center;
  }
}

@media (max-width: 600px) {
  .game-board-container {
    flex-direction: row;
    gap: 30px;
    padding: 12px;
    justify-content: center;
    flex-wrap: nowrap;
    overflow-x: auto;
    min-height: 220px;
  }
  
  .hexagram-column {
    width: 38%;
    min-width: 100px;
    flex: none;
  }
  
  .name-column {
    width: 55%;
    min-width: 130px;
    max-width: 150px;
    flex: none;
  }
  
  .hexagram-block {
    width: 100%;
    height: 85px;
    padding: 8px;
    margin: 0 auto;
  }
  
  .hexagram-symbol {
    font-size: 48px;
  }
  
  .hexagram-name {
    font-size: 17px;
  }
  
  .hexagram-pinyin {
    font-size: 13px;
  }
  
  .hexagram-alias {
    font-size: 12px;
  }
  
  .hexagram-trigrams {
    font-size: 11px;
  }
  
  .inline-learn-button {
    font-size: 14px;
    padding: 5px 10px;
    min-width: 65px;
    max-width: 85px;
  }
}

@media (max-width: 480px) {
  .game-board-container {
    gap: 25px;
    padding: 10px;
    min-height: 200px;
  }
  
  .hexagram-column {
    width: 38%;
    min-width: 90px;
  }
  
  .name-column {
    width: 55%;
    min-width: 120px;
    max-width: 140px;
  }
  
  .hexagram-block {
    width: 100%;
    height: 75px;
    padding: 6px;
  }
  
  .hexagram-symbol {
    font-size: 44px;
  }
  
  .hexagram-name {
    font-size: 16px;
  }
  
  .hexagram-pinyin {
    font-size: 12px;
  }
  
  .hexagram-alias {
    font-size: 11px;
  }
  
  .hexagram-trigrams {
    font-size: 10px;
  }
  
  .inline-learn-button {
    font-size: 13px;
    padding: 4px 8px;
    min-width: 60px;
    max-width: 80px;
  }
}