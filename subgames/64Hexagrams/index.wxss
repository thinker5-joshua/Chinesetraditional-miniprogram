/* 基础样式 */
page {
  font-family: "SimSun", "STSong", "Noto Serif SC", serif;
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 50%, #f5f1e9 100%);
  color: #3a2c1e;
  line-height: 1.6;
  position: relative;
}

page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 20%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(205, 133, 63, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(218, 165, 32, 0.02) 0%, transparent 60%);
  pointer-events: none;
  z-index: 0;
}

.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 8px;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 15px;
  padding: 15px;
  background: linear-gradient(135deg, rgba(211, 199, 167, 0.4), rgba(205, 133, 63, 0.3));
  border: 3px solid #b8a57e;
  border-radius: 15px;
  box-shadow: 0 8px 20px rgba(139, 69, 19, 0.2);
  position: relative;
  z-index: 1;
}

.title {
  font-size: 28px;
  color: #8b4513;
  margin-bottom: 10px;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.15);
  font-weight: bold;
  display: block;
  letter-spacing: 2px;
}

.subtitle {
  font-size: 15px;
  color: #6d4c41;
  letter-spacing: 1px;
  display: block;
  line-height: 1.5;
}

/* 游戏容器 */
.game-container {
  background-color: rgba(255, 255, 255, 0.95);
  border: 3px solid #b8a57e;
  border-radius: 15px;
  padding: 20px;
  box-shadow: 0 8px 25px rgba(139, 69, 19, 0.15);
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
}

.game-container::before {
  content: '☯';
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 24px;
  color: rgba(139, 69, 19, 0.2);
  opacity: 0.6;
}

/* 分数板 */
.score-board {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
  padding: 10px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 12px;
  border: 2px solid rgba(184, 165, 126, 0.3);
}

.progress {
  flex: 1;
  max-width: 400px;
}

.progress span {
  font-size: 14px;
  font-weight: bold;
  color: #ff9800;
  display: block;
  margin-bottom: 5px;
  transition: color 0.5s ease;
}

.progress-bar {
  width: 100%;
  height: 20px;
  background-color: #f5f5f5;
  border-radius: 6px;
  overflow: hidden;
  border: 1px solid #ddd;
  position: relative;
}

.progress-fill {
  height: 100%;
  background-color: #8b4513;
  transition: width 0.5s ease;
  position: absolute;
  left: 0;
  top: 0;
}

/* 三段式进度条 */
.progress-bar::before {
  content: '';
  position: absolute;
  left: 33.33%;
  top: 0;
  width: 1px;
  height: 100%;
  background-color: #ddd;
}

.progress-bar::after {
  content: '';
  position: absolute;
  left: 66.66%;
  top: 0;
  width: 1px;
  height: 100%;
  background-color: #ddd;
}

.progress-dots {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 2px;
  pointer-events: none;
}

.progress-dot {
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background-color: #ddd;
  transition: all 0.3s ease;
}

.progress-dot.active {
  background-color: #8b4513;
  transform: scale(1);
}

/* 游戏板容器 */
.game-board-container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: 50px;
  margin-bottom: 15px;
  padding: 15px;
  width: 100%;
  min-height: 260px;
  /* 强制保持左右分列布局 */
  flex-direction: row;
}

/* 卦象列和卦名列 */
.hexagram-column, .name-column {
  flex: 0 0 auto;
  width: 160px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  min-width: 140px;
}

/* 卦象方块 */
.hexagram-block {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 50%, #ffffff 100%);
  border: 2px solid #b8a57e;
  border-radius: 12px;
  padding: 12px;
  width: 100px;
  height: 100px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.2);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 匹配状态样式 */
.hexagram-block.matched {
  border-width: 3px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  transform: scale(1.02);
}

.hexagram-block::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(218, 165, 32, 0.05) 0%, transparent 70%);
  transition: all 0.6s ease;
}

.hexagram-block.selected {
  border-color: #cd5c5c;
  background: linear-gradient(145deg, rgba(205, 92, 92, 0.1), rgba(205, 92, 92, 0.05));
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 8px 25px rgba(205, 92, 92, 0.4);
}

.hexagram-block.selected::before {
  background: radial-gradient(circle, rgba(205, 92, 92, 0.1) 0%, transparent 70%);
}

.hexagram-block:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(139, 69, 19, 0.3);
  border-color: #8b4513;
}

.hexagram-block:hover::before {
  transform: rotate(180deg);
}

.hexagram-symbol {
  font-size: 65px;
  margin: 0;
  font-family: "SimSun", monospace;
  line-height: 1;
  letter-spacing: 1px;
  display: block;
  text-align: center;
  color: #2c3e50;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.15);
  font-weight: bold;
}

.hexagram-name {
  font-size: 16px;
  font-weight: bold;
  color: #8b4513;
  margin: 4px 0 1px 0;
  display: block;
  letter-spacing: 0.5px;
}

.hexagram-pinyin {
  font-size: 12px;
  color: #6d4c41;
  font-family: Arial, sans-serif;
  margin: 0;
  display: block;
  font-style: italic;
  opacity: 0.8;
}

/* 选择信息 */
.selected-info {
  text-align: center;
  font-size: 13px;
  color: #6d4c41;
  padding: 6px;
  background-color: rgba(211, 199, 167, 0.1);
  border-radius: 6px;
}

/* 去学卦按钮 */
.learn-hexagram-container {
  display: flex;
  justify-content: flex-end;
  padding: 10px 0;
}

.learn-hexagram-button {
  background-color: #8b4513;
  color: #fff;
  border: none;
  padding: 8px 20px;
  font-size: 14px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  box-shadow: 0 3px 10px rgba(139, 69, 19, 0.2);
}

.learn-hexagram-button:hover {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(139, 69, 19, 0.3);
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px;
}

.modal-content {
  background-color: #fff;
  border: 2px solid #b8a57e;
  border-radius: 10px;
  padding: 15px;
  max-width: 85%;
  max-height: 80vh;
  overflow-y: auto;
  text-align: center;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.modal-title {
  font-size: 24px;
  color: #8b4513;
  margin-bottom: 10px;
  display: block;
}

.success-message {
  font-size: 14px;
  color: #6d4c41;
  margin-bottom: 10px;
  display: block;
}

/* 卦象信息 */
.hexagram-info {
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 10px;
  padding: 12px;
  margin-bottom: 20px;
}

.hexagram-info-title {
  font-size: 24px;
  color: #8b4513;
  margin-bottom: 15px;
  display: block;
  font-weight: bold;
}

/* 卦象预览列表 */
.hexagram-preview-list {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin: 15px 0;
  flex-wrap: wrap;
}

.hexagram-preview-item {
  background-color: rgba(240, 240, 240, 0.8);
  border-radius: 12px;
  padding: 15px;
  text-align: center;
  width: 120px;
  transition: transform 0.2s, box-shadow 0.2s;
  cursor: pointer;
}

.hexagram-preview-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
}

/* 大型预览样式 */
.hexagram-preview-item.large-preview {
  width: 120px;
  padding: 15px 12px;
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.95), rgba(248, 248, 248, 0.9));
  border: 2px solid #b8a57e;
  box-shadow: 0 4px 15px rgba(139, 69, 19, 0.2);
}

.hexagram-preview-item.large-preview:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 8px 20px rgba(139, 69, 19, 0.3);
  border-color: #8b4513;
}

.preview-symbol {
  margin-bottom: 10px;
  line-height: 1.2;
  font-size: 24px;
  display: block;
}

.hexagram-preview-item.large-preview .preview-symbol {
  font-size: 36px;
  margin-bottom: 10px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
}

.preview-name {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  display: block;
}

.hexagram-preview-item.large-preview .preview-name {
  font-size: 15px;
  font-weight: bold;
  color: #8b4513;
  margin-bottom: 2px;
  letter-spacing: 0.5px;
}

/* 按钮 */
.play-again-button {
  background-color: #8b4513;
  color: #fff;
  border: none;
  padding: 12px 30px;
  font-size: 17px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
}

.play-again-button:hover {
  background-color: #cd853f;
  transform: scale(1.05);
}

/* 详情模态框 */
.detail-modal {
  max-width: 95%;
}

.modal-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 2px solid #b8a57e;
}

.modal-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  padding-top: 15px;
  border-top: 2px solid #b8a57e;
}

.close-button {
  background-color: #8b4513;
  border: none;
  font-size: 18px;
  padding: 12px 30px;
  border-radius: 8px;
  cursor: pointer;
  color: #fff;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.close-button:hover {
  background-color: #b8a57e;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(139, 69, 19, 0.4);
}

.hexagram-detail-content {
  text-align: left;
  line-height: 1.6;
}

.hexagram-detail-content .hexagram-symbol {
  text-align: center;
  margin: 15px 0 8px 0;
  font-size: 48px;
  display: block;
}

.hexagram-pinyin-detail {
  text-align: center;
  margin: 0 0 12px 0;
  font-size: 18px;
  color: #6d4c41;
  font-family: Arial, sans-serif;
  font-style: italic;
  font-weight: 500;
  letter-spacing: 2px;
  display: block;
}

.hexagram-text {
  font-size: 16px;
  color: #555;
  font-style: italic;
  line-height: 1.4;
  margin-bottom: 12px;
  display: block;
}

.yao-title {
  color: #8b4513;
  margin: 15px 0 8px 0;
  font-size: 18px;
  font-weight: bold;
  display: block;
}

.yao-info {
  margin-top: 12px;
  padding: 10px;
  background-color: rgba(211, 199, 167, 0.1);
  border-radius: 6px;
  margin-bottom: 8px;
  font-size: 14px;
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 1200px) {
  .game-board-container {
    gap: 25px;
  }
  
  .hexagram-column, .name-column {
    max-width: 160px;
  }
}

@media (max-width: 900px) {
  .game-board-container {
    gap: 20px;
    padding: 12px;
    min-height: 240px;
  }
  
  .hexagram-column, .name-column {
    max-width: 140px;
  }
  
  .hexagram-block {
    width: 90px;
    height: 90px;
    padding: 10px;
  }
  
  .hexagram-symbol {
    font-size: 58px;
  }
}

@media (max-width: 768px) {
  .game-board-container {
    flex-direction: row;
    gap: 15px;
    padding: 12px;
    justify-content: space-around;
    min-height: 220px;
  }
  
  .hexagram-column, .name-column {
    max-width: 120px;
    flex: 1;
  }
  
  .hexagram-block {
    width: 85px;
    height: 85px;
    padding: 8px;
  }
  
  .hexagram-symbol {
    font-size: 52px;
  }
  
  .hexagram-name {
    font-size: 15px;
  }
  
  .hexagram-pinyin {
    font-size: 11px;
  }
  
  .score-board {
    justify-content: center;
  }
}

@media (max-width: 600px) {
  .game-board-container {
    flex-direction: row;
    gap: 12px;
    padding: 10px;
    justify-content: center;
    flex-wrap: nowrap;
    overflow-x: auto;
    min-height: 200px;
  }
  
  .hexagram-column, .name-column {
    max-width: 45%;
    width: 45%;
    flex: none;
    min-width: 120px;
  }
  
  .hexagram-block {
    width: 100%;
    max-width: 90px;
    height: 80px;
    padding: 6px;
    margin: 0 auto;
  }
  
  .hexagram-symbol {
    font-size: 46px;
  }
  
  .hexagram-name {
    font-size: 14px;
  }
  
  .hexagram-pinyin {
    font-size: 10px;
  }
}

@media (max-width: 480px) {
  .game-board-container {
    gap: 10px;
    padding: 8px;
    min-height: 180px;
  }
  
  .hexagram-block {
    max-width: 80px;
    height: 70px;
    padding: 5px;
  }
  
  .hexagram-symbol {
    font-size: 42px;
  }
  
  .hexagram-name {
    font-size: 13px;
  }
  
  .hexagram-pinyin {
    font-size: 9px;
  }
}