/* 基础样式 */
page {
  font-family: "SimSun", "STSong", "Noto Serif SC", serif;
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 50%, #f5f1e9 100%);
  color: #3a2c1e;
  line-height: 1.6;
  position: relative;
  overflow: hidden;
  height: 100vh;
  touch-action: pan-y;
}

page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 20%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(205, 133, 63, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(218, 165, 32, 0.02) 0%, transparent 60%);
  pointer-events: none;
  z-index: 0;
}

.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 4px;
  overflow: hidden;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 8px;
  padding: 12px 15px;
  background: linear-gradient(135deg, #8b4513 0%, #a0522d 50%, #8b4513 100%);
  border: 3px solid #d4af37;
  border-radius: 15px;
  box-shadow: 0 6px 15px rgba(139, 69, 19, 0.4);
  position: relative;
  z-index: 1;
}

.title {
  font-size: 24px;
  color: #fff;
  margin-bottom: 5px;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  font-weight: bold;
  display: block;
  letter-spacing: 2px;
  line-height: 1.2;
}

.subtitle {
  font-size: 14px;
  color: #f0e68c;
  letter-spacing: 1.5px;
  display: block;
  line-height: 1.4;
  font-weight: bold;
  margin-top: 3px;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

/* 顶部按钮区域 */
.top-buttons {
  display: flex;
  justify-content: center;
  gap: 8px;
  margin-bottom: 10px;
  padding: 0 30px;
  background-color: transparent;
  border-radius: 0;
  box-shadow: none;
  flex-wrap: nowrap;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.top-button {
  background-color: #f5f1e9;
  color: #8b4513;
  border: 2px solid #b8a57e;
  padding: 8px 12px;
  font-size: 15px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  box-shadow: 0 2px 6px rgba(139, 69, 19, 0.2);
  font-weight: bold;
  letter-spacing: 0.5px;
  width: auto;
  min-width: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  flex-shrink: 1;
}

.top-button:hover {
  background-color: #e8dfd2;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

/* 按钮图标 */
.button-icon {
  font-size: 18px;
}

/* 查看模式选择 */
.mode-selector {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0;
  margin-bottom: 10px;
  padding: 15px;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 15px;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.1);
  border: 3px solid #b8a57e;
  width: calc(100% - 30px);
  box-sizing: border-box;
  height: auto;
  min-height: auto;
  margin-left: auto;
  margin-right: auto;
}

.mode-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: nowrap;
  margin: 0;
  padding: 0;
  width: 100%;
}

.mode-button {
  background-color: #f5f1e9;
  color: #8b4513;
  border: 2px solid #b8a57e;
  padding: 8px 10px;
  font-size: 15px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  font-weight: bold;
  letter-spacing: 0.5px;
  min-width: auto;
  margin: 0;
  width: auto;
  max-width: 120px;
  box-sizing: border-box;
}

.mode-button.active {
  background-color: #8b4513;
  color: #fff;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.mode-button:hover {
  background-color: #e8dfd2;
  transform: translateY(-1px);
}

.mode-button.active:hover {
  background-color: #a0522d;
}

/* 分组查看模式 */
.group-info {
  text-align: center;
  margin-bottom: 15px;
  padding: 10px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 12px;
  border: 2px solid rgba(184, 165, 126, 0.3);
}

.group-title {
  font-size: 20px;
  color: #8b4513;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.group-subtitle {
  font-size: 14px;
  color: #6d4c41;
  display: block;
}

/* 卦象网格 */
.hexagram-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: 15px;
  margin-bottom: 15px;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.1);
}

.hexagram-item {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 50%, #ffffff 100%);
  border: 2px solid #b8a57e;
  border-radius: 12px;
  padding: 12px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.2);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 150px;
}

.hexagram-item:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(139, 69, 19, 0.3);
  border-color: #8b4513;
}

.hexagram-item .hexagram-symbol {
  font-size: 48px;
  margin-bottom: 8px;
  font-family: "SimSun", monospace;
  line-height: 1;
  color: #2c3e50;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.15);
  font-weight: bold;
}

.hexagram-item .hexagram-name {
  font-size: 18px;
  font-weight: bold;
  color: #8b4513;
  margin-bottom: 4px;
  letter-spacing: 0.5px;
}

.hexagram-item .hexagram-pinyin {
  font-size: 14px;
  color: #6d4c41;
  font-family: Arial, sans-serif;
  font-style: italic;
  opacity: 0.8;
}

/* 分页控制 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20px;
  margin-top: 15px;
  padding: 10px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 12px;
  border: 2px solid rgba(184, 165, 126, 0.3);
}

.pagination-button {
  background-color: #8b4513;
  color: #fff;
  border: 2px solid #b8a57e;
  padding: 6px 15px;
  font-size: 16px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  font-weight: bold;
  letter-spacing: 0.5px;
}

.pagination-button:hover:not(.disabled) {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.pagination-button.disabled {
  background-color: #d3c7a7;
  color: #8b4513;
  border-color: #b8a57e;
  cursor: not-allowed;
  opacity: 0.7;
}

.page-indicator {
  font-size: 16px;
  font-weight: bold;
  color: #8b4513;
}

/* 随机翻阅模式 */
.random-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  padding: 0;
  background-color: transparent;
  border-radius: 0;
  box-shadow: none;
}

.random-card {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 50%, #ffffff 100%);
  border: 3px solid #b8a57e;
  border-radius: 15px;
  padding: 20px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 6px 18px rgba(139, 69, 19, 0.2);
  position: relative;
  overflow: hidden;
  max-width: none;
  width: calc(100% - 30px);
  margin: 0 auto;
  box-sizing: border-box;
}

.random-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(139, 69, 19, 0.3);
  border-color: #8b4513;
}

.random-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(218, 165, 32, 0.05) 0%, transparent 70%);
  transition: all 0.6s ease;
}

.random-card:hover::before {
  transform: rotate(180deg);
}

.hexagram-sequence {
  font-size: 16px;
  color: #8b4513;
  font-weight: bold;
  margin-bottom: 15px;
  display: block;
  letter-spacing: 1px;
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 1;
}

.hexagram-symbol-large {
  font-size: 120px;
  margin: 20px 0;
  font-family: "SimSun", monospace;
  line-height: 1;
  color: #2c3e50;
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.15);
  font-weight: bold;
  display: block;
}

.hexagram-name-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 15px;
  margin-bottom: 15px;
  flex-wrap: wrap;
}

.hexagram-name-large {
  font-size: 48px;
  font-weight: bold;
  color: #8b4513;
  letter-spacing: 2px;
}

.hexagram-pinyin-large {
  font-size: 28px;
  color: #6d4c41;
  font-family: Arial, sans-serif;
  font-style: italic;
  opacity: 0.8;
}

.hexagram-extra-info {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 15px;
  margin-bottom: 20px;
  flex-wrap: nowrap;
  padding: 0;
  background-color: transparent;
  border-radius: 0;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.hexagram-alias {
  font-size: 20px;
  color: #8b4513;
  font-weight: bold;
  letter-spacing: 1px;
  white-space: nowrap;
  flex-shrink: 0;
}

.hexagram-trigrams {
  font-size: 18px;
  color: #6d4c41;
  letter-spacing: 0.5px;
  white-space: nowrap;
  flex-shrink: 0;
}

.hexagram-text-section {
  text-align: center;
  background-color: rgba(245, 241, 233, 0.8);
  border-radius: 10px;
  padding: 15px;
  margin-top: 15px;
}

.section-title {
  font-size: 20px;
  color: #8b4513;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
  text-align: center;
  letter-spacing: 1px;
}

.hexagram-text {
  font-size: 18px;
  color: #333333;
  line-height: 1.8;
  text-align: center;
  letter-spacing: 0.5px;
}

/* 随机翻阅翻页控制 */
.random-pagination {
  display: flex;
  justify-content: center;
  gap: 40px;
  margin-top: 15px;
  padding: 10px;
  width: calc(100% - 80px);
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
}

.random-page-button {
  background-color: #8b4513;
  color: #fff;
  border: 2px solid #b8a57e;
  padding: 10px 20px;
  font-size: 16px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  font-weight: bold;
  letter-spacing: 0.5px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: auto;
  min-width: 120px;
  box-sizing: border-box;
}

.random-page-button:hover {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.page-arrow {
  font-size: 18px;
  font-weight: bold;
}

/* 六爻变模式 */
.six-yao-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  padding: 0;
  background-color: transparent;
  border-radius: 0;
  box-shadow: none;
}

.six-yao-buttons {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 10px;
  margin-bottom: 15px;
  padding: 20px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 15px;
  border: 3px solid rgba(184, 165, 126, 0.3);
  flex-wrap: nowrap;
  overflow-x: hidden;
  box-sizing: border-box;
  width: calc(100% - 30px);
  margin-left: auto;
  margin-right: auto;
}

.yao-button {
  background-color: #f5f1e9;
  color: #8b4513;
  border: 3px solid #b8a57e;
  padding: 8px 5px;
  font-size: 12px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  font-weight: bold;
  letter-spacing: 0.5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 3px;
  min-width: 40px;
  flex-shrink: 1;
}

.yao-button.yang {
  background-color: #d2c8a6;
  color: #8b4513;
}

.yao-button.yin {
  background-color: #f8f5e6;
  color: #8b4513;
}

.yao-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.yao-text {
  font-size: 12px;
  font-weight: bold;
}

.yao-symbol {
  font-size: 20px;
  font-weight: bold;
}

/* 提示文字 */
.hint-text {
  font-size: 14px;
  color: #6d4c41;
  text-align: center;
  margin-top: 0;
  font-style: italic;
  opacity: 0.8;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .top-buttons {
    gap: 5px;
    padding: 5px;
  }
  
  .top-button {
    padding: 6px 10px;
    font-size: 14px;
    gap: 3px;
  }
  
  .button-icon {
    font-size: 16px;
  }
  
  .mode-buttons {
    gap: 8px;
  }
  
  .mode-button {
    padding: 5px 12px;
    font-size: 14px;
  }
  
  .hexagram-grid {
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 10px;
  }
  
  .hexagram-item {
    height: 130px;
    padding: 10px;
  }
  
  .hexagram-item .hexagram-symbol {
    font-size: 40px;
  }
  
  .hexagram-item .hexagram-name {
    font-size: 16px;
  }
  
  .hexagram-item .hexagram-pinyin {
    font-size: 12px;
  }
  
  .random-card {
    padding: 20px;
  }
  
  .hexagram-symbol-large {
    font-size: 90px;
    margin: 15px 0;
  }
  
  .hexagram-name-large {
    font-size: 36px;
  }
  
  .hexagram-pinyin-large {
    font-size: 24px;
  }
  
  .hexagram-alias {
    font-size: 20px;
  }
  
  .hexagram-trigrams {
    font-size: 16px;
  }
  
  .hexagram-text {
    font-size: 16px;
  }
  
  .random-pagination {
    gap: 20px;
  }
  
  .random-page-button {
    padding: 8px 15px;
    font-size: 16px;
  }
  
  .six-yao-buttons {
    gap: 12px;
    padding: 15px;
  }
  
  .yao-button {
    padding: 6px 6px;
    font-size: 12px;
    min-width: 35px;
    gap: 2px;
  }
  
  .yao-text {
    font-size: 10px;
  }
  
  .yao-symbol {
    font-size: 18px;
  }
}

@media (max-width: 480px) {
  .hexagram-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }
  
  .hexagram-item {
    height: 120px;
    padding: 8px;
  }
  
  .hexagram-item .hexagram-symbol {
    font-size: 36px;
  }
  
  .hexagram-symbol-large {
    font-size: 70px;
    margin: 10px 0;
  }
  
  .hexagram-name-large {
    font-size: 28px;
  }
  
  .hexagram-pinyin-large {
    font-size: 20px;
  }
  
  .hexagram-extra-info {
    flex-direction: row;
    gap: 8px;
  }
  
  .hexagram-alias {
    font-size: 16px;
  }
  
  .hexagram-trigrams {
    font-size: 14px;
  }
  
  .hexagram-text-section {
    padding: 10px;
  }
  
  .hexagram-text {
    font-size: 14px;
  }
  
  .random-pagination {
    gap: 15px;
  }
  
  .random-page-button {
    padding: 8px 15px;
    font-size: 16px;
  }
  
  .six-yao-buttons {
    gap: 10px;
    padding: 10px;
  }
  
  .yao-button {
    padding: 5px 5px;
    font-size: 11px;
    min-width: 30px;
    gap: 2px;
  }
  
  .yao-text {
    font-size: 9px;
  }
  
  .yao-symbol {
    font-size: 16px;
  }
}