/* 基础样式 */
page {
  font-family: "SimSun", "STSong", "Noto Serif SC", serif;
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 50%, #f5f1e9 100%);
  color: #3a2c1e;
  line-height: 1.6;
  position: relative;
}

page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 20%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(205, 133, 63, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(218, 165, 32, 0.02) 0%, transparent 60%);
  pointer-events: none;
  z-index: 0;
}

.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 8px;
}

/* 头部 */
.header {
  text-align: center;
  margin: 60rpx 0 40rpx 0;
  padding: 30rpx 40rpx;
  position: relative;
  z-index: 1;
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  border-radius: 25rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
  display: block;
  letter-spacing: 2px;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-style: italic;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.2);
  display: block;
  line-height: 1.5;
  letter-spacing: 1px;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .header {
    margin: 40rpx 0 30rpx 0;
    padding: 25rpx 30rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
  }
}

@media (max-width: 480rpx) {
  .header {
    margin: 30rpx 0 25rpx 0;
    padding: 20rpx 25rpx;
  }
  
  .title {
    font-size: 36rpx;
  }
  
  .subtitle {
    font-size: 20rpx;
  }
}

/* 分组方式选择 */
.mode-selector {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 15px;
  padding: 8px 12px;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 8px;
  border: 1px solid #b8a57e;
  box-shadow: 0 2px 6px rgba(139, 69, 19, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.mode-buttons {
  display: flex;
  gap: 8px;
  width: 100%;
  justify-content: center;
  box-sizing: border-box;
}

.mode-button {
  background-color: #f5f5f5;
  color: #6d4c41;
  border: 1px solid #b8a57e;
  padding: 6px 12px;
  font-size: 13px;
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  white-space: nowrap;
  flex: 1;
  text-align: center;
  min-width: 0;
}

.mode-button.active {
  background-color: #8b4513;
  color: #fff;
  box-shadow: 0 3px 8px rgba(139, 69, 19, 0.3);
}

.mode-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(139, 69, 19, 0.25);
}

/* 组信息 */
.group-info {
  text-align: center;
  margin-bottom: 20px;
  padding: 12px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 10px;
  border: 2px solid rgba(184, 165, 126, 0.3);
}

.group-title {
  font-size: 20px;
  color: #8b4513;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.group-subtitle {
  font-size: 14px;
  color: #6d4c41;
  display: block;
  font-style: italic;
}

/* 卦象网格 */
.hexagram-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: 15px;
  margin-bottom: 20px;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 15px;
  border: 3px solid #b8a57e;
  box-shadow: 0 8px 25px rgba(139, 69, 19, 0.15);
  position: relative;
  z-index: 1;
}

.hexagram-item {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 50%, #ffffff 100%);
  border: 2px solid #b8a57e;
  border-radius: 12px;
  padding: 15px 10px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.2);
  position: relative;
  overflow: hidden;
}

.hexagram-item::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(218, 165, 32, 0.05) 0%, transparent 70%);
  transition: all 0.6s ease;
}

.hexagram-item:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 8px 20px rgba(139, 69, 19, 0.3);
  border-color: #8b4513;
}

.hexagram-item:hover::before {
  background: radial-gradient(circle, rgba(139, 69, 19, 0.1) 0%, transparent 70%);
}

.hexagram-symbol {
  font-size: 55px;
  margin: 0 0 8px 0;
  font-family: "SimSun", monospace;
  line-height: 1;
  letter-spacing: 1px;
  display: block;
  color: #2c3e50;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.15);
  font-weight: bold;
}

.hexagram-name {
  font-size: 17px;
  font-weight: bold;
  color: #8b4513;
  margin: 4px 0 2px 0;
  display: block;
  letter-spacing: 0.5px;
}

.hexagram-pinyin {
  font-size: 13px;
  color: #6d4c41;
  font-family: Arial, sans-serif;
  margin: 0;
  display: block;
  font-style: italic;
  opacity: 0.8;
}

/* 翻页控制 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 15px;
  margin-bottom: 20px;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 10px;
  border: 2px solid #b8a57e;
}

.pagination-button {
  background-color: #8b4513;
  color: #fff;
  border: none;
  padding: 10px 20px;
  font-size: 14px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
}

.pagination-button.disabled {
  background-color: #ccc;
  cursor: not-allowed;
  opacity: 0.6;
}

.pagination-button:not(.disabled):hover {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.page-indicator {
  font-size: 16px;
  font-weight: bold;
  color: #8b4513;
  padding: 10px 15px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 6px;
}

/* 返回按钮 */
.back-container {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.back-button {
  background-color: #8b4513;
  color: #fff;
  border: none;
  padding: 12px 30px;
  font-size: 16px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.back-button:hover {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(139, 69, 19, 0.4);
}

/* 添加分组模式的上方分隔线 */
.mode-selector .mode-buttons:nth-child(2) {
  border-top: 1px solid rgba(184, 165, 126, 0.3);
  padding-top: 8px;
  margin-top: 8px;
}

/* 随机翻阅样式 */
.random-view {
  margin-top: 20px;
}

/* 随机卦象卡片 */
.random-card {
  background-color: rgba(255, 255, 255, 0.95);
  border: 3px solid #b8a57e;
  border-radius: 15px;
  padding: 25px;
  margin-bottom: 20px;
  box-shadow: 0 8px 25px rgba(139, 69, 19, 0.15);
  text-align: center;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.3s ease, opacity 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
}

.random-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 30px rgba(139, 69, 19, 0.25);
  border-color: #8b4513;
}

.random-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(218, 165, 32, 0.03) 0%, transparent 70%);
  transition: all 0.6s ease;
}

/* 卦象序号 */
.hexagram-sequence {
  font-size: 14px;
  color: #8b4513;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
  text-align: right;
}

/* 大型卦象 */
.hexagram-symbol-large {
  font-size: 110px;
  margin: 15px 0;
  font-family: "SimSun", monospace;
  line-height: 1;
  letter-spacing: 1px;
  display: block;
  color: #2c3e50;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.15);
  font-weight: bold;
}

/* 卦名和拼音行 */
.hexagram-name-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  margin-bottom: 10px;
  flex-wrap: wrap;
}

/* 大型卦名 */
.hexagram-name-large {
  font-size: 28px;
  font-weight: bold;
  color: #8b4513;
  margin: 0;
  display: inline-block;
  letter-spacing: 0.5px;
}

/* 大型拼音 */
.hexagram-pinyin-large {
  font-size: 18px;
  color: #6d4c41;
  font-family: Arial, sans-serif;
  margin: 0;
  display: inline-block;
  font-style: italic;
  opacity: 0.8;
}

/* 额外信息 */
.hexagram-extra-info {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
  margin-bottom: 15px;
  flex-wrap: wrap;
}

/* 别名 */
.hexagram-alias {
  font-size: 16px;
  color: #8b4513;
  margin: 0;
  display: inline-block;
  letter-spacing: 0.3px;
  font-weight: 500;
}

/* 上下卦 */
.hexagram-trigrams {
  font-size: 15px;
  color: #6d4c41;
  margin: 0;
  display: inline-block;
  font-style: normal;
  opacity: 0.8;
}

/* 卦辞部分 */
.hexagram-text-section {
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 10px;
  padding: 15px;
  margin-top: 15px;
  text-align: left;
}

/* 章节标题 */
.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #8b4513;
  margin-bottom: 8px;
  display: block;
  text-align: center;
}

/* 卦辞文本 */
.hexagram-text {
  font-size: 16px;
  color: #3a2c1e;
  line-height: 1.6;
  display: block;
  text-align: center;
}

/* 随机翻页控制 */
.random-pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 10px;
  border: 2px solid #b8a57e;
}

/* 随机翻页按钮 */
.random-page-button {
  background-color: #8b4513;
  color: #fff;
  border: none;
  padding: 12px 25px;
  font-size: 15px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.random-page-button:hover {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

/* 页箭头 */
.page-arrow {
  font-size: 18px;
  font-weight: bold;
}

/* 六爻变模式样式 */
.six-yao-view {
  margin-top: 20px;
}

/* 六爻按钮容器 */
.six-yao-buttons {
  display: flex;
  justify-content: space-between;
  gap: 8px;
  margin-bottom: 20px;
  padding: 15px;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 10px;
  border: 2px solid #b8a57e;
  flex-wrap: nowrap;
}

/* 单个爻按钮 */
.yao-button {
  flex: 1;
  background-color: #f5f5f5;
  border: 2px solid #b8a57e;
  border-radius: 8px;
  padding: 10px 5px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  min-height: 60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

/* 阴爻按钮样式 */
.yao-button.yin {
  background-color: rgba(240, 235, 220, 0.8);
  color: #6d4c41;
}

/* 阳爻按钮样式 */
.yao-button.yang {
  background-color: rgba(211, 199, 167, 0.8);
  color: #8b4513;
  border-color: #8b4513;
  box-shadow: 0 3px 8px rgba(139, 69, 19, 0.2);
}

/* 爻按钮悬停效果 */
.yao-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.25);
}

/* 爻文字 */
.yao-text {
  font-size: 13px;
  font-weight: bold;
  margin-bottom: 2px;
  display: block;
  line-height: 1;
}

/* 爻符号 */
.yao-symbol {
  font-size: 24px;
  font-weight: bold;
  display: block;
  line-height: 1;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .hexagram-grid {
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 12px;
    padding: 8px;
  }
  
  .hexagram-item {
    padding: 12px 8px;
  }
  
  .hexagram-symbol {
    font-size: 42px;
  }
  
  .hexagram-name {
    font-size: 15px;
  }
  
  .hexagram-pinyin {
    font-size: 11px;
  }
  
  .mode-selector {
    padding: 6px 10px;
  }
  
  .mode-buttons {
    gap: 6px;
  }
  
  .mode-button {
    padding: 5px 10px;
    font-size: 12px;
  }
  
  /* 随机翻阅响应式 */
  .random-card {
    padding: 20px;
  }
  
  .hexagram-symbol-large {
    font-size: 85px;
  }
  
  .hexagram-name-large {
    font-size: 24px;
  }
  
  .hexagram-pinyin-large {
    font-size: 16px;
  }
  
  .random-pagination {
    flex-direction: row;
    gap: 10px;
  }
  
  .random-page-button {
    padding: 10px 20px;
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .hexagram-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    padding: 6px;
  }
  
  .hexagram-item {
    padding: 10px 6px;
  }
  
  .hexagram-symbol {
    font-size: 38px;
  }
  
  .hexagram-name {
    font-size: 14px;
  }
  
  .hexagram-pinyin {
    font-size: 10px;
  }
  
  /* 随机翻阅响应式 */
  .random-card {
    padding: 15px;
  }
  
  .hexagram-symbol-large {
    font-size: 75px;
  }
  
  .hexagram-name-large {
    font-size: 22px;
  }
  
  .hexagram-pinyin-large {
    font-size: 15px;
  }
  
  .random-pagination {
    flex-direction: row;
    gap: 8px;
    padding: 8px;
  }
  
  .random-page-button {
    padding: 8px 16px;
    font-size: 13px;
  }
  
  .page-arrow {
    font-size: 16px;
  }
  
  .random-switch-button {
    padding: 10px 25px;
    font-size: 15px;
  }
}