/* 基础样式 */
page {
  font-family: "SimSun", "STSong", "Noto Serif SC", serif;
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 50%, #f5f1e9 100%);
  color: #3a2c1e;
  line-height: 1.6;
  position: relative;
  padding: 0;
}

page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 20%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(205, 133, 63, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(218, 165, 32, 0.02) 0%, transparent 60%);
  pointer-events: none;
  z-index: 0;
}

.container {
  max-width: 800px;
  margin: 0 auto;
  padding: 15px;
  min-height: 100vh;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 30px;
  padding: 20px;
  background: linear-gradient(135deg, rgba(211, 199, 167, 0.4), rgba(205, 133, 63, 0.3));
  border: 3px solid #b8a57e;
  border-radius: 15px;
  box-shadow: 0 8px 20px rgba(139, 69, 19, 0.2);
  position: relative;
  z-index: 1;
}

.title {
  font-size: 32px;
  color: #8b4513;
  margin-bottom: 8px;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.15);
  font-weight: bold;
  display: block;
  letter-spacing: 3px;
}

.subtitle {
  font-size: 18px;
  color: #6d4c41;
  font-style: italic;
  letter-spacing: 2px;
  display: block;
}

/* 卦象显示 */
.hexagram-display {
  text-align: center;
  margin-bottom: 30px;
  padding: 25px;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 15px;
  border: 3px solid #b8a57e;
  box-shadow: 0 8px 25px rgba(139, 69, 19, 0.15);
  position: relative;
  z-index: 1;
}

.hexagram-symbol {
  font-size: 72px;
  margin: 0 0 15px 0;
  font-family: "SimSun", monospace;
  line-height: 1;
  letter-spacing: 3px;
  display: block;
  color: #2c3e50;
  text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.15);
  font-weight: bold;
}

.hexagram-number {
  font-size: 20px;
  color: #8b4513;
  font-weight: bold;
  display: block;
  letter-spacing: 1px;
}

/* 内容区域 */
.content-section {
  margin-bottom: 30px;
  padding: 20px;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  border: 2px solid #b8a57e;
  box-shadow: 0 6px 20px rgba(139, 69, 19, 0.15);
  position: relative;
  z-index: 1;
}

.section-title {
  font-size: 22px;
  color: #8b4513;
  font-weight: bold;
  margin-bottom: 15px;
  display: block;
  letter-spacing: 2px;
  border-bottom: 2px solid #b8a57e;
  padding-bottom: 8px;
}

.hexagram-text {
  font-size: 18px;
  color: #555;
  line-height: 1.8;
  text-align: justify;
  display: block;
  font-style: italic;
}

/* 爻辞 */
.yao-item {
  margin-bottom: 15px;
  padding: 12px;
  background-color: rgba(211, 199, 167, 0.1);
  border-radius: 8px;
  border-left: 4px solid #b8a57e;
}

.yao-number {
  font-size: 16px;
  color: #8b4513;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.yao-text {
  font-size: 16px;
  color: #444;
  line-height: 1.6;
  display: block;
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 40px;
  padding: 20px;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  border: 2px solid #b8a57e;
  box-shadow: 0 6px 20px rgba(139, 69, 19, 0.15);
}

.action-button {
  flex: 1;
  max-width: 200px;
  padding: 15px 20px;
  font-size: 16px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  border: none;
  text-align: center;
}

.action-button.primary {
  background-color: #8b4513;
  color: #fff;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.action-button.secondary {
  background-color: #f5f5f5;
  color: #8b4513;
  border: 2px solid #b8a57e;
}

.action-button:hover {
  transform: translateY(-3px);
}

.action-button.primary:hover {
  background-color: #cd853f;
  box-shadow: 0 6px 20px rgba(139, 69, 19, 0.4);
}

.action-button.secondary:hover {
  background-color: #e8dfd2;
  border-color: #8b4513;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.2);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .container {
    padding: 10px;
  }
  
  .hexagram-display {
    padding: 20px;
  }
  
  .hexagram-symbol {
    font-size: 60px;
  }
  
  .title {
    font-size: 28px;
  }
  
  .subtitle {
    font-size: 16px;
  }
  
  .section-title {
    font-size: 20px;
  }
  
  .hexagram-text {
    font-size: 16px;
  }
  
  .yao-number {
    font-size: 14px;
  }
  
  .yao-text {
    font-size: 14px;
  }
  
  .button-group {
    flex-direction: column;
    gap: 10px;
  }
  
  .action-button {
    max-width: none;
    width: 100%;
  }
}

@media (max-width: 480px) {
  .hexagram-symbol {
    font-size: 48px;
  }
  
  .title {
    font-size: 24px;
  }
  
  .subtitle {
    font-size: 14px;
  }
  
  .hexagram-display {
    padding: 15px;
  }
  
  .content-section {
    padding: 15px;
  }
  
  .hexagram-text {
    font-size: 15px;
  }
}