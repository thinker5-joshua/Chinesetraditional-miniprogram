/* 基础样式 */
page {
  font-family: "SimSun", "STSong", "Noto Serif SC", serif;
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 50%, #f5f1e9 100%);
  color: #3a2c1e;
  line-height: 1.6;
  position: relative;
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 头部容器 */
.header-section {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 248, 248, 0.9));
  border-bottom: 2px solid #b8a57e;
  box-shadow: 0 4px 15px rgba(139, 69, 19, 0.15);
  z-index: 1000;
  backdrop-filter: blur(10px);
  position: sticky;
  top: 0;
}

.header-content {
  padding: 15px 20px;
  max-width: 600px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  gap: 20px;
}

/* 左侧卦象容器 */
.symbol-container {
  flex-shrink: 0;
  width: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hexagram-symbol-large {
  font-size: 70px;
  font-family: "SimSun", monospace;
  color: #8b4513;
  font-weight: bold;
  text-shadow: 2px 2px 4px rgba(139, 69, 19, 0.1);
  line-height: 1;
}

/* 右侧信息容器 */
.info-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.title-row {
  display: flex !important;
  flex-direction: row !important;
  align-items: baseline;
  gap: 15px;
  flex-wrap: nowrap;
}

.main-title {
  font-size: 32px;
  color: #8b4513;
  font-weight: bold;
  letter-spacing: 3px;
  display: inline-block;
  white-space: nowrap;
}

.subtitle {
  font-size: 18px;
  color: #6d4c41;
  font-style: italic;
  display: inline-block;
  white-space: nowrap;
}

.meta-row {
  display: flex !important;
  flex-direction: row !important;
  align-items: center;
  gap: 15px;
  flex-wrap: nowrap;
}

.alias {
  font-size: 16px;
  color: #8b4513;
  font-weight: bold;
  background-color: rgba(211, 199, 167, 0.3);
  padding: 4px 12px;
  border-radius: 15px;
  border: 1px solid rgba(184, 165, 126, 0.5);
  display: inline-block;
  white-space: nowrap;
  flex-shrink: 0;
}

.trigrams {
  font-size: 14px;
  color: #6d4c41;
  background-color: rgba(139, 69, 19, 0.1);
  padding: 4px 12px;
  border-radius: 15px;
  border: 1px solid rgba(139, 69, 19, 0.2);
  display: inline-block;
  white-space: nowrap;
  flex-shrink: 0;
}

/* 内容区容器 */
.content-section {
  flex: 1;
  overflow: hidden;
}

/* 可滚动内容区 */
.scrollable-content {
  height: 100%;
  padding: 15px 15px 80px 15px;
  max-width: 700px;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
}

/* 内容卡片 - 典雅诗词风格 */
.content-card {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(252, 252, 252, 0.8));
  border: 2px solid #b8a57e;
  border-radius: 15px;
  padding: 25px;
  margin-bottom: 25px;
  box-shadow: 
    0 8px 25px rgba(139, 69, 19, 0.1),
    0 2px 8px rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.content-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at 20% 20%, rgba(139, 69, 19, 0.02) 0%, transparent 50%);
  pointer-events: none;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15px;
  position: relative;
}

.card-title {
  font-size: 22px;
  color: #8b4513;
  font-weight: bold;
  letter-spacing: 2px;
  position: relative;
  z-index: 1;
}

.decorative-line {
  flex: 1;
  height: 2px;
  background: linear-gradient(90deg, #b8a57e 0%, rgba(184, 165, 126, 0.3) 100%);
  margin-left: 15px;
  border-radius: 1px;
  position: relative;
  overflow: hidden;
}

.decorative-line::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8px;
  height: 8px;
  background-color: #8b4513;
  border-radius: 50%;
  box-shadow: 0 0 6px rgba(139, 69, 19, 0.3);
}

.card-content {
  font-size: 18px;
  color: #3a2c1e;
  line-height: 1.8;
  text-align: justify;
  text-indent: 2em;
  position: relative;
  z-index: 1;
}

/* 爻辞列表 */
.yao-list {
  space-y: 12px;
}

.yao-item {
  display: flex;
  align-items: flex-start;
  padding: 12px;
  background-color: rgba(211, 199, 167, 0.1);
  border-left: 3px solid #8b4513;
  border-radius: 0 8px 8px 0;
  margin-bottom: 12px;
  transition: all 0.3s ease;
}

.yao-item:hover {
  background-color: rgba(211, 199, 167, 0.2);
  transform: translateX(5px);
}

.yao-number {
  font-size: 18px;
  color: #8b4513;
  font-weight: bold;
  margin-right: 12px;
  min-width: 30px;
}

.yao-text {
  flex: 1;
  font-size: 17px;
  line-height: 1.7;
}

/* 相关卦象卡片 */
.related-card {
  background: linear-gradient(145deg, rgba(139, 69, 19, 0.05), rgba(205, 133, 63, 0.03));
}

.related-horizontal {
  display: flex;
  justify-content: space-between;
  gap: 10px;
  margin-top: 15px;
  flex-wrap: wrap;
}

.related-item {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 8px;
  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid #b8a57e;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  flex: 1;
  min-width: 0;
  justify-content: center;
}

.related-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 20px rgba(139, 69, 19, 0.15);
  border-color: #8b4513;
}

.related-symbol-small {
  font-size: 24px;
  font-family: "SimSun", monospace;
  color: #8b4513;
  font-weight: bold;
  width: 30px;
  text-align: center;
  flex-shrink: 0;
}

.related-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 2px;
  min-width: 0;
  align-items: center;
}

.related-type {
  font-size: 11px;
  color: #6d4c41;
  font-weight: bold;
  background-color: rgba(139, 69, 19, 0.1);
  padding: 1px 6px;
  border-radius: 8px;
  text-align: center;
}

.related-name {
  font-size: 13px;
  color: #3a2c1e;
  font-weight: bold;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

/* 固定返回按钮 */
.fixed-back-button {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
  backdrop-filter: blur(10px);
}

.back-button {
  background: linear-gradient(135deg, #8b4513 0%, #cd853f 100%);
  color: #fff;
  border: none;
  padding: 12px 40px;
  font-size: 16px;
  border-radius: 25px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  box-shadow: 
    0 8px 25px rgba(139, 69, 19, 0.3),
    0 2px 8px rgba(0, 0, 0, 0.2);
  letter-spacing: 1px;
  font-weight: bold;
}

.back-button:active {
  transform: scale(0.95);
  box-shadow: 
    0 4px 15px rgba(139, 69, 19, 0.3),
    0 1px 4px rgba(0, 0, 0, 0.2);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .hexagram-symbol-large {
    font-size: 60px;
  }
  
  .main-title {
    font-size: 28px;
    letter-spacing: 2px;
  }
  
  .subtitle {
    font-size: 16px;
  }
  
  .header-content {
    padding: 12px 15px;
    gap: 15px;
  }
  
  .symbol-container {
    width: 70px;
  }
  
  .hexagram-symbol-large {
    font-size: 60px;
  }
  
  .scrollable-content {
    padding: 12px 12px 80px 12px;
  }
  
  .content-card {
    padding: 20px;
    margin-bottom: 20px;
  }
  
  .card-title {
    font-size: 20px;
    letter-spacing: 1.5px;
  }
  
  .card-content {
    font-size: 16px;
    line-height: 1.7;
  }
  
  .related-horizontal {
    gap: 8px;
  }
  
  .back-button {
    padding: 10px 30px;
    font-size: 15px;
  }
}

@media (max-width: 600px) {
  .symbol-container {
    width: 65px;
  }
  
  .hexagram-symbol-large {
    font-size: 54px;
  }
  
  .header-content {
    gap: 12px;
  }
  
  .title-row {
    flex-direction: row;
    gap: 10px;
    flex-wrap: wrap;
  }
  
  .main-title {
    font-size: 24px;
  }
  
  .meta-row {
    flex-direction: row;
    gap: 8px;
    flex-wrap: wrap;
  }
  
  .scrollable-content {
    padding: 10px 10px 80px 10px;
  }
  
  .content-card {
    padding: 18px;
    margin-bottom: 18px;
  }
  
  .card-title {
    font-size: 18px;
  }
  
  .card-content {
    font-size: 15px;
    text-indent: 1.5em;
  }
  
  .related-horizontal {
    flex-direction: column;
    gap: 6px;
  }
  
  .related-item {
    padding: 12px;
    justify-content: flex-start;
  }
  
  .back-button {
    padding: 10px 25px;
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .symbol-container {
    width: 60px;
  }
  
  .hexagram-symbol-large {
    font-size: 48px;
  }
  
  .header-content {
    gap: 10px;
  }
  
  .main-title {
    font-size: 22px;
    letter-spacing: 1px;
  }
  
  .subtitle {
    font-size: 15px;
  }
  
  .header-content {
    padding: 12px;
  }
  
  .scrollable-content {
    padding: 8px 8px 80px 8px;
  }
  
  .content-card {
    padding: 15px;
    margin-bottom: 15px;
    border-radius: 12px;
  }
  
  .card-header {
    margin-bottom: 12px;
  }
  
  .card-title {
    font-size: 17px;
    letter-spacing: 1px;
  }
  
  .card-content {
    font-size: 14px;
    line-height: 1.6;
    text-indent: 1.2em;
  }
  
  .yao-item {
    padding: 10px;
  }
  
  .yao-number {
    font-size: 16px;
    min-width: 25px;
  }
  
  .yao-text {
    font-size: 15px;
  }
  
  .back-button {
    padding: 8px 20px;
    font-size: 13px;
  }
}