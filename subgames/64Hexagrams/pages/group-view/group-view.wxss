/* 基础样式 */
page {
  font-family: "SimSun", "STSong", "Noto Serif SC", serif;
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 50%, #f5f1e9 100%);
  color: #3a2c1e;
  line-height: 1.6;
  position: relative;
}

page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 20%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(205, 133, 63, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(218, 165, 32, 0.02) 0%, transparent 60%);
  pointer-events: none;
  z-index: 0;
}

.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 8px;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 8px;
  padding: 8px;
  background: linear-gradient(135deg, rgba(211, 199, 167, 0.4), rgba(205, 133, 63, 0.3));
  border: 3px solid #b8a57e;
  border-radius: 15px;
  box-shadow: 0 6px 15px rgba(139, 69, 19, 0.2);
  position: relative;
  z-index: 1;
}

.title {
  font-size: 22px;
  color: #8b4513;
  margin-bottom: 3px;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.15);
  font-weight: bold;
  display: block;
  letter-spacing: 2px;
  line-height: 1.2;
}

.subtitle {
  font-size: 13px;
  color: #8b4513;
  letter-spacing: 1.5px;
  display: block;
  line-height: 1.4;
  font-weight: bold;
  margin-top: 2px;
}

/* 查看模式选择 */
.mode-selector {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
  padding: 6px;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.1);
}

.mode-buttons {
  display: flex;
  gap: 10px;
  justify-content: space-between;
  flex-wrap: nowrap;
  width: 100%;
}

.mode-button {
  background-color: #f5f1e9;
  color: #8b4513;
  border: 2px solid #b8a57e;
  padding: 6px 15px;
  font-size: 16px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  font-weight: bold;
  letter-spacing: 0.5px;
}

.mode-button.active {
  background-color: #8b4513;
  color: #fff;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.mode-button:hover {
  background-color: #e8dfd2;
  transform: translateY(-1px);
}

.mode-button.active:hover {
  background-color: #a0522d;
}

/* 分组查看模式内容 */
.group-view {
  padding: 6px;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.1);
}

.group-info {
  text-align: center;
  margin-bottom: 6px;
  padding: 6px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 12px;
  border: 2px solid rgba(184, 165, 126, 0.3);
}

.group-title {
  font-size: 18px;
  color: #8b4513;
  font-weight: bold;
  display: block;
  margin-bottom: 3px;
}

.group-subtitle {
  font-size: 13px;
  color: #6d4c41;
  display: block;
}

/* 卦象网格 */
.hexagram-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 8px;
  margin-bottom: 8px;
  padding: 6px;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.1);
}

.hexagram-item {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 50%, #ffffff 100%);
  border: 2px solid #b8a57e;
  border-radius: 12px;
  padding: 8px 12px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.2);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  gap: 12px;
  height: 70px;
}

.hexagram-item:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(139, 69, 19, 0.3);
  border-color: #8b4513;
}

.hexagram-item .hexagram-symbol {
  font-size: 48px;
  font-family: "SimSun", monospace;
  line-height: 1;
  color: #2c3e50;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.15);
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hexagram-item .hexagram-name {
  font-size: 22px;
  font-weight: bold;
  color: #8b4513;
  letter-spacing: 1px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  text-align: left;
}

.hexagram-item .hexagram-pinyin {
  font-size: 12px;
  color: #6d4c41;
  font-family: Arial, sans-serif;
  font-style: italic;
  opacity: 0.8;
}

/* 分页控制 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 15px;
  margin-top: 6px;
  padding: 6px;
  background-color: rgba(211, 199, 167, 0.2);
  border-radius: 12px;
  border: 2px solid rgba(184, 165, 126, 0.3);
}

.pagination-button {
  background-color: #8b4513;
  color: #fff;
  border: 2px solid #b8a57e;
  padding: 6px 15px;
  font-size: 16px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  font-weight: bold;
  letter-spacing: 0.5px;
}

.pagination-button:hover:not(.disabled) {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.pagination-button.disabled {
  background-color: #d3c7a7;
  color: #8b4513;
  border-color: #b8a57e;
  cursor: not-allowed;
  opacity: 0.7;
}

.page-indicator {
  font-size: 16px;
  font-weight: bold;
  color: #8b4513;
}

/* 返回按钮 */
.back-button-container {
  display: flex;
  justify-content: center;
  margin-top: 8px;
  margin-bottom: 8px;
}

.back-button {
  background-color: #8b4513;
  color: #fff;
  border: 2px solid #b8a57e;
  padding: 10px 20px;
  font-size: 18px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: "SimSun", "STSong", serif;
  font-weight: bold;
  letter-spacing: 1px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  box-shadow: 0 4px 10px rgba(139, 69, 19, 0.3);
}

.back-button:hover {
  background-color: #cd853f;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(139, 69, 19, 0.4);
}

.button-icon {
  font-size: 20px;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .mode-buttons {
    gap: 8px;
  }
  
  .mode-button {
    padding: 5px 12px;
    font-size: 14px;
  }
  
  .hexagram-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
  }
  
  .hexagram-item {
    height: 70px;
    padding: 8px 12px;
  }
  
  .hexagram-item .hexagram-symbol {
    font-size: 48px;
  }
  
  .hexagram-item .hexagram-name {
    font-size: 22px;
  }
}

@media (max-width: 480px) {
  .hexagram-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
  }
  
  .hexagram-item {
    height: 70px;
    padding: 8px 10px;
  }
  
  .hexagram-item .hexagram-symbol {
    font-size: 44px;
  }
  
  .hexagram-item .hexagram-name {
    font-size: 20px;
  }
  
  .pagination {
    gap: 15px;
  }
  
  .pagination-button {
    padding: 5px 12px;
    font-size: 14px;
  }
  
  .back-button {
    padding: 8px 15px;
    font-size: 16px;
  }
}