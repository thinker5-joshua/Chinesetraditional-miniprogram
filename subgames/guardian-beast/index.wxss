/* 守护神兽首页样式 - 参考二十八星宿探秘风格 */

/* 全局样式 */
page {
  font-family: 'Microsoft YaHei', 'SimSun', sans-serif;
  background: linear-gradient(135deg, #0a0515 0%, #1a0f2a 50%, #0a0515 100%);
  color: #ffffff;
  line-height: 1.6;
  padding: 0;
  min-height: 100vh;
  overflow-x: hidden;
  position: relative;
}

/* 背景纹路 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(2rpx 2rpx at 20% 30%, rgba(100, 255, 218, 0.1), transparent),
    radial-gradient(2rpx 2rpx at 60% 70%, rgba(100, 255, 218, 0.08), transparent),
    radial-gradient(1rpx 1rpx at 80% 20%, rgba(100, 255, 218, 0.06), transparent),
    radial-gradient(1rpx 1rpx at 40% 80%, rgba(100, 255, 218, 0.05), transparent);
  background-size: 300rpx 300rpx, 400rpx 400rpx, 250rpx 250rpx, 350rpx 350rpx;
  animation: twinkle 15s infinite ease-in-out;
  z-index: 0;
  opacity: 0.6;
}

@keyframes twinkle {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

/* 页面头部 */
.about-header {
  text-align: center;
  margin: 60rpx 0 60rpx 0;
  padding: 30rpx 40rpx;
  position: relative;
  z-index: 1;
}

.main-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #64ffda;
  text-shadow: 0 0 30rpx rgba(100, 255, 218, 0.6);
  display: block;
  margin-bottom: 15rpx;
  letter-spacing: 6rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #a0aec0;
  line-height: 1.4;
  letter-spacing: 1rpx;
  display: block;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 已抽取的守护神兽展示区 */
.extracted-beast-section {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-radius: 30rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 0 25rpx rgba(100, 255, 218, 0.2);
  border: 2rpx solid rgba(100, 255, 218, 0.3);
  position: relative;
  z-index: 1;
  box-sizing: border-box;
  overflow: hidden;
}

/* 区域标题 */
.section-title {
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.section-title .title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #64ffda;
  display: block;
  margin-bottom: 8rpx;
  text-shadow: 0 0 15rpx rgba(100, 255, 218, 0.4);
}

.section-title .subtitle-text {
  font-size: 24rpx;
  color: #a0aec0;
  display: block;
}

/* 已抽取神兽卡片 */
.extracted-beast-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

/* 主内容区域 - 图片和信息并行 */
.beast-main-content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 40rpx;
  margin-bottom: 30rpx;
  width: 100%;
  padding-left: 15%; /* 整体向右移动四分之一框宽度 */
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

/* 大图容器，带火焰效果 */
.beast-image-large-container {
  width: 350rpx;
  height: 350rpx;
  background: linear-gradient(135deg, rgba(100, 255, 218, 0.2), rgba(0, 255, 255, 0.1));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 3rpx solid #64ffda;
  box-shadow: 0 0 30rpx rgba(100, 255, 218, 0.5);
  position: relative;
  z-index: 1;
  animation: float 3s ease-in-out infinite;
}

/* 大图样式 */
.beast-image-large {
  width: 300rpx;
  height: 300rpx;
  object-fit: contain;
  border-radius: 50%;
}

/* 火焰效果 */
.flame-top,
.flame-right,
.flame-bottom,
.flame-left {
  position: absolute;
  background: radial-gradient(ellipse at center, rgba(255, 100, 100, 0.8) 0%, rgba(255, 100, 100, 0) 70%);
  animation: flame 2s ease-in-out infinite;
  pointer-events: none;
  border-radius: 50%;
  z-index: 0;
}

.flame-top {
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 60rpx;
  animation-delay: 0s;
}

.flame-right {
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 100rpx;
  animation-delay: 0.5s;
}

.flame-bottom {
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 60rpx;
  animation-delay: 1s;
}

.flame-left {
  left: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 100rpx;
  animation-delay: 1.5s;
}

/* 火焰动画 */
@keyframes flame {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.2); }
}

/* 浮动动画 */
@keyframes float {
  0%, 100% { transform: translateY(0rpx); }
  50% { transform: translateY(-10rpx); }
}

/* 优化的信息显示 */
.beast-info-large {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  min-width: 0;
  text-align: right; /* 文本右对齐 */
  position: relative;
  z-index: 1;
}

/* 名称样式 - 主要颜色 */
.beast-name-large {
  font-size: 48rpx;
  font-weight: bold;
  color: #64ffda;
  text-shadow: 0 0 20rpx rgba(100, 255, 218, 0.4);
  display: block;
  margin-bottom: 15rpx;
  letter-spacing: 2rpx;
  word-break: break-word;
}

/* 神兽名称样式 - 次要颜色 */
.beast-beastName-large {
  font-size: 36rpx;
  font-weight: bold;
  color: #f39c12;
  text-shadow: 0 0 15rpx rgba(243, 156, 18, 0.3);
  display: block;
  letter-spacing: 1rpx;
  word-break: break-word;
}

/* 隐藏原来的小图样式 */
.beast-image-container,
.beast-info,
.beast-pinyin,
.beast-rank {
  display: none;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 15rpx;
  justify-content: center;
  position: relative;
  z-index: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.action-btn {
  padding: 14rpx 28rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 120rpx;
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
  max-width: 45%;
}

.action-btn.primary {
  background: linear-gradient(135deg, #64ffda, #00ffff);
  color: #0a0515;
  box-shadow: 0 6rpx 20rpx rgba(100, 255, 218, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 25rpx rgba(100, 255, 218, 0.4);
}

.action-btn.secondary {
  background: linear-gradient(135deg, #f39c12, #ffd97d);
  color: #0a0515;
  box-shadow: 0 6rpx 20rpx rgba(243, 156, 18, 0.3);
}

.action-btn.secondary:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 25rpx rgba(243, 156, 18, 0.4);
}

/* 抽取按钮区域 */
.draw-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.draw-btn {
  background: linear-gradient(135deg, #64ffda, #00ffff);
  color: #0a0515;
  padding: 25rpx 70rpx;
  border-radius: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 30rpx rgba(100, 255, 218, 0.4);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
  position: relative;
  z-index: 1;
  min-width: 300rpx;
}

.draw-btn:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 15rpx rgba(100, 255, 218, 0.3);
}

/* 脊兽列表区域 */
.beasts-list-section {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 0 25rpx rgba(100, 255, 218, 0.2);
  border: 2rpx solid rgba(100, 255, 218, 0.3);
  flex: 1;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

/* 隐藏脊兽列表的描述文本 */
.beasts-list .info-description,
.beasts-list .description-text {
  display: none;
}

/* 脊兽网格布局 */
.beasts-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280rpx, 1fr));
  gap: 30rpx;
  margin-top: 20rpx;
  position: relative;
  z-index: 1;
}

/* 脊兽卡片 */
.beast-card {
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(100, 255, 218, 0.3);
  border-radius: 20rpx;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  min-height: 300rpx;
  z-index: 1;
}

.beast-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, transparent, #64ffda, transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 0;
}

.beast-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(100, 255, 218, 0.2);
}

.beast-card:hover {
  background: rgba(100, 255, 218, 0.08);
  border-color: #64ffda;
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 25rpx rgba(100, 255, 218, 0.3);
}

.beast-card:hover::before {
  opacity: 1;
}

.card-image-container {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, rgba(100, 255, 218, 0.2), rgba(0, 255, 255, 0.1));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 3rpx solid rgba(100, 255, 218, 0.5);
  box-shadow: 0 0 20rpx rgba(100, 255, 218, 0.3);
  position: relative;
  z-index: 1;
}

.card-beast-image {
  width: 140rpx;
  height: 140rpx;
  object-fit: contain;
  position: relative;
  z-index: 1;
}

.card-info {
  text-align: center;
  width: 100%;
  position: relative;
  z-index: 1;
}

.card-beast-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #64ffda;
  text-shadow: 0 0 15rpx rgba(100, 255, 218, 0.4);
  display: block;
  margin-bottom: 8rpx;
}

.card-beast-pinyin {
  font-size: 24rpx;
  color: #f39c12;
  font-style: italic;
  display: block;
  margin-bottom: 10rpx;
}

.card-beast-rank {
  font-size: 20rpx;
  color: #0a0515;
  background: linear-gradient(135deg, #f39c12, #ffd97d);
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(243, 156, 18, 0.2);
}

