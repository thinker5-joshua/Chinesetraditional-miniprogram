}

.card-name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.card-pinyin {
  font-size: 24rpx;
  font-style: italic;
  display: block;
  margin-bottom: 5rpx;
}

.card-rank {
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  display: inline-block;
}

/* 动画效果 */
@keyframes cardGlow {
  0%, 100% { box-shadow: 0 10rpx 30rpx rgba(100, 255, 218, 0.3); }
  50% { box-shadow: 0 15rpx 40rpx rgba(100, 255, 218, 0.6); }
}

@keyframes glowPulse {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.1); }
}

@keyframes cardFlame {
  0%, 100% { box-shadow: 0 10rpx 30rpx rgba(255, 100, 100, 0.4); }
  50% { box-shadow: 0 15rpx 40rpx rgba(255, 100, 100, 0.7); }
}

@keyframes flameTop {
  0%, 100% { opacity: 0.5; transform: scaleY(1); }
  50% { opacity: 0.8; transform: scaleY(1.2); }
}

@keyframes flameBottom {
  0%, 100% { opacity: 0.5; transform: scaleY(1); }
  50% { opacity: 0.8; transform: scaleY(1.2); }
}