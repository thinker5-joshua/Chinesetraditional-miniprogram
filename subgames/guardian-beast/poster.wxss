/* 海报生成页样式 - 参考二十八星宿探秘风格 */
.poster-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0a0515 0%, #1a0f2a 50%, #0a0515 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
}

/* 背景星空 */
.poster-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(2rpx 2rpx at 20% 30%, rgba(100, 255, 218, 0.8), transparent),
    radial-gradient(2rpx 2rpx at 60% 70%, rgba(100, 255, 218, 0.6), transparent),
    radial-gradient(1rpx 1rpx at 80% 20%, rgba(100, 255, 218, 0.7), transparent),
    radial-gradient(1rpx 1rpx at 40% 80%, rgba(100, 255, 218, 0.5), transparent);
  background-size: 300rpx 300rpx, 400rpx 400rpx, 250rpx 250rpx, 350rpx 350rpx;
  animation: twinkle 15s infinite ease-in-out;
  z-index: 0;
  opacity: 0.6;
}

@keyframes twinkle {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

/* 页面标题 */
.page-title {
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.title-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #64ffda;
  text-shadow: 0 0 20rpx rgba(100, 255, 218, 0.5);
  letter-spacing: 8rpx;
  font-family: 'Microsoft YaHei', 'SimSun', sans-serif;
}

/* 海报生成区域 */
.poster-generation-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  position: relative;
  z-index: 1;
  width: 100%;
  max-width: 800rpx;
}

/* 用于绘制海报的Canvas，完全隐藏，不影响布局 */
.poster-canvas {
  position: fixed;
  opacity: 0;
  pointer-events: none;
  z-index: -1;
  width: 0;
  height: 0;
  left: -9999rpx;
  top: -9999rpx;
}

/* 完整海报显示容器 */
.poster-full-container {
  width: 600rpx;
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 完整海报图片 */
.poster-full-image {
  width: 100%;
  height: auto;
  object-fit: fill;
  border-radius: 20rpx;
  display: block;
  max-width: 100%;
  max-height: none;
  box-shadow: 0 0 30rpx rgba(100, 255, 218, 0.2);
  background-color: #0a0515;
}

/* 生成中提示 */
.generating-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  z-index: 10;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(10, 5, 21, 0.9);
  padding: 60rpx;
  border-radius: 25rpx;
  border: 3rpx solid rgba(100, 255, 218, 0.5);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 0 40rpx rgba(100, 255, 218, 0.3);
  width: 400rpx;
}

.hint-text {
  font-size: 36rpx;
  color: #64ffda;
  font-weight: bold;
  font-family: 'Microsoft YaHei', 'SimSun', sans-serif;
  text-shadow: 0 0 20rpx rgba(100, 255, 218, 0.6);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(100, 255, 218, 0.3);
  border-top: 8rpx solid #64ffda;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  box-shadow: 0 0 30rpx rgba(100, 255, 218, 0.4);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  max-width: 600rpx;
  position: relative;
  z-index: 1;
}

.main-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.action-button {
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 'Microsoft YaHei', 'SimSun', sans-serif;
  letter-spacing: 4rpx;
  min-height: 90rpx;
  flex: 1;
}

.action-button.primary {
  background: linear-gradient(135deg, #64ffda 0%, #00bcd4 100%);
  color: #0a0515;
  border: none;
  box-shadow: 0 15rpx 40rpx rgba(100, 255, 218, 0.4);
}

.action-button.primary:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 20rpx rgba(100, 255, 218, 0.3);
}

.action-button.secondary {
  background: transparent;
  color: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(100, 255, 218, 0.4);
  box-shadow: 0 0 25rpx rgba(100, 255, 218, 0.15);
  font-size: 28rpx;
  min-height: 80rpx;
}

.action-button.secondary:active {
  background: rgba(100, 255, 218, 0.1);
  transform: scale(0.95);
}

.action-button.back-button {
  background: transparent;
  color: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(100, 255, 218, 0.4);
  box-shadow: 0 0 25rpx rgba(100, 255, 218, 0.15);
  font-size: 28rpx;
  min-height: 80rpx;
  margin-top: 10rpx;
  flex: 1;
}

/* 底部提示 */
.bottom-hint {
  margin-top: 40rpx;
  text-align: center;
  position: relative;
  z-index: 1;
  max-width: 600rpx;
}

.hint-content {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.6;
  display: block;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .poster-container {
    padding: 30rpx 20rpx;
  }
  
  .title-text {
    font-size: 36rpx;
  }
  
  .poster-preview-container {
    width: 500rpx;
    height: 750rpx;
  }
  
  .poster-canvas {
    width: 500rpx;
    height: 750rpx;
  }
  
  .action-button.primary {
    font-size: 28rpx;
  }
  
  .action-button.secondary {
    font-size: 26rpx;
  }
  
  .hint-content {
    font-size: 22rpx;
  }
}
