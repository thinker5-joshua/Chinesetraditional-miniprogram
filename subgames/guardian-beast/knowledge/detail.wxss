/* 脊兽详情页样式 */
.detail-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.background-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.decoration-item {
  position: absolute;
  background: radial-gradient(circle, rgba(139, 69, 19, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 10s ease-in-out infinite;
}

.decoration-item:nth-child(1) {
  width: 200rpx;
  height: 200rpx;
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.decoration-item:nth-child(2) {
  width: 150rpx;
  height: 150rpx;
  top: 60%;
  right: 15%;
  animation-delay: 5s;
}

.decoration-item:nth-child(3) {
  width: 100rpx;
  height: 100rpx;
  bottom: 20%;
  left: 20%;
  animation-delay: 3s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); opacity: 0.5; }
  50% { transform: translate(50rpx, -50rpx) rotate(180deg); opacity: 0.8; }
}

/* 详情内容 */
.detail-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

/* 神兽图片 */
.beast-image-section {
  width: 100%;
  display: flex;
  justify-content: center;
  position: relative;
}

.beast-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: white;
  padding: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #8B4513;
}

.image-glow {
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 440rpx;
  height: 440rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(139, 69, 19, 0.2) 0%, transparent 70%);
  animation: glow 3s ease-in-out infinite;
}

.beast-rank {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(139, 69, 19, 0.8);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}

.rank-text {
  display: block;
}

@keyframes glow {
  0%, 100% { opacity: 0.5; transform: translateX(-50%) scale(1); }
  50% { opacity: 0.8; transform: translateX(-50%) scale(1.1); }
}

/* 基本信息 */
.basic-info-section {
  text-align: center;
  width: 100%;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.info-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
  position: relative;
  width: 100%;
}

.name-pinyin-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  justify-content: center;
  margin-bottom: 10rpx;
}

.beast-name {
  font-size: 52rpx;
  font-weight: bold;
  color: #8B4513;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.beast-pinyin {
  font-size: 36rpx;
  color: #666666;
  font-style: italic;
}

.beast-position {
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  color: white;
  border-radius: 30rpx;
  padding: 10rpx 40rpx;
  display: inline-block;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}

.position-text {
  font-size: 24rpx;
  font-weight: bold;
}

.beast-beastname {
  margin-top: 10rpx;
}

.beastname-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #8B4513;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 详细信息卡片 */
.detail-card {
  width: 100%;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 信息项 */
.info-item {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding-bottom: 25rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.item-title {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.title-icon {
  font-size: 36rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
}

.item-content {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.6;
  text-indent: 72rpx;
}

/* 返回按钮 */
.back-button-container {
  width: 100%;
  margin-top: 20rpx;
}

.back-button {
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
  box-shadow: 0 10rpx 30rpx rgba(139, 69, 19, 0.3);
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.95);
  box-shadow: 0 5rpx 15rpx rgba(139, 69, 19, 0.2);
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
  gap: 30rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #8B4513;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 8rpx solid rgba(139, 69, 19, 0.2);
  border-top: 8rpx solid #8B4513;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .detail-container {
    padding: 30rpx 20rpx;
  }
  
  .beast-image {
    width: 300rpx;
    height: 300rpx;
  }
  
  .image-glow {
    width: 340rpx;
    height: 340rpx;
  }
  
  .beast-name {
    font-size: 40rpx;
  }
  
  .beast-pinyin {
    font-size: 28rpx;
  }
  
  .title-text {
    font-size: 28rpx;
  }
  
  .item-content {
    font-size: 24rpx;
  }
  
  .back-button {
    font-size: 28rpx;
    padding: 15rpx;
  }
}