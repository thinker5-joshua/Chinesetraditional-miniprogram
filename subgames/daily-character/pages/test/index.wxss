/* 全局样式 */
.container {
  min-height: 100vh;
  background-color: #f8f6f0;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  font-size: 32rpx;
  color: #666;
}

/* 测试容器 */
.test-container {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #e8e4d8;
}

/* 进度指示器 */
.progress-indicator {
  margin-bottom: 30rpx;
}

.progress-text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.progress-bar {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #8B4513;
  transition: width 0.3s ease;
  border-radius: 4rpx;
}

/* 题目区域 */
.question-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.question-character {
  font-size: 180rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 20rpx;
}

.question-prompt {
  font-size: 32rpx;
  color: #555;
  font-weight: 500;
}

/* 相关词组样式 */
.related-phrases {
  margin: 20rpx 0 40rpx 0;
  text-align: center;
  line-height: 1.6;
}

.phrases-label {
  font-size: 36rpx;
  color: #8B4513;
  font-weight: bold;
}

.phrases-text {
  font-size: 36rpx;
  color: #8B4513;
  font-weight: 500;
}

.phrases-list {
  font-size: 36rpx;
  color: #8B4513;
  font-weight: 500;
}

.phrase-item {
  font-size: 36rpx;
  color: #8B4513;
  font-weight: 500;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 35rpx;
}

.option-item {
  background-color: #f5f5f5;
  padding: 30rpx 40rpx;
  border-radius: 15rpx;
  display: block;
  font-size: 42rpx;
  color: #555;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
  min-height: 80rpx;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  border-color: #8B4513;
  box-shadow: 0 0 0 4rpx rgba(139, 69, 19, 0.2);
}

.option-item.correct {
  background-color: #d4edda;
  border-color: #c3e6cb;
  color: #155724;
}

.option-item.wrong {
  background-color: #f8d7da;
  border-color: #f5c6cb;
  color: #721c24;
}

/* 选项内容容器 */
.option-content {
  display: block;
  width: 100%;
  box-sizing: border-box;
}

/* 选项标记 */
.option-label {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: inline-block;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-right: 30rpx;
  vertical-align: middle;
}

/* 选项文本 */
.option-text {
  font-size: 42rpx;
  font-weight: 500;
  display: inline-block;
  vertical-align: middle;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: calc(100% - 100rpx);
}

/* 每个选项的不同底色 */
.option-0 {
  background-color: #e3f2fd;
}

.option-1 {
  background-color: #e8f5e9;
}

.option-2 {
  background-color: #fff8e1;
}

.option-3 {
  background-color: #f3e5f5;
}

/* 选项标记颜色 */
.option-0 .option-label {
  background-color: #2196f3;
}

.option-1 .option-label {
  background-color: #4caf50;
}

.option-2 .option-label {
  background-color: #ff9800;
}

.option-3 .option-label {
  background-color: #9c27b0;
}

/* 结果容器 */
.result-container {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #e8e4d8;
}

/* 结果头部 */
.result-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.result-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 15rpx;
}

.result-grade {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #28a745;
}

/* 结果统计 */
.result-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  border-top: 2rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
}

/* 结果消息 */
.result-message {
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.restart-btn {
  background-color: #8B4513;
  color: white;
}

.back-btn {
  background-color: #D2B48C;
  color: #8B4513;
}

/* 答题回顾 */
.review-section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #8B4513;
}

.review-item {
  background-color: #f8f9fa;
  padding: 25rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e9ecef;
}

.review-character {
  font-size: 48rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 15rpx;
}

.review-answers {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.review-correct {
  font-size: 28rpx;
  color: #28a745;
  font-weight: 500;
}

.review-user {
  font-size: 28rpx;
  color: #17a2b8;
}

.review-user.wrong {
  color: #dc3545;
}