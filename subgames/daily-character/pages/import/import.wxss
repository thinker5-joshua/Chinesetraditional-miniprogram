/* 数据导入测试页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.content {
  max-width: 800rpx;
  margin: 0 auto;
}

.info-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.info-label {
  font-size: 24rpx;
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

.button-area {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.primary-button {
  flex: 1;
  background-color: #07c160;
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.secondary-button {
  flex: 1;
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.result-area {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.result-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.result-label {
  font-size: 24rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.result-value {
  font-size: 24rpx;
  color: #333;
  flex: 1;
  word-break: break-word;
}

.result-value.success {
  color: #07c160;
}

.result-value.error {
  color: #ff4d4f;
}

.logs-area {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.logs-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.logs-scroll {
  max-height: 400rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  padding: 10rpx;
}

.log-item {
  display: flex;
  margin-bottom: 10rpx;
  align-items: flex-start;
  font-size: 20rpx;
}

.log-time {
  color: #999;
  width: 150rpx;
  flex-shrink: 0;
}

.log-content {
  color: #333;
  flex: 1;
  word-break: break-word;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .button-area {
    flex-direction: column;
  }
  
  .info-item {
    flex-direction: column;
  }
  
  .info-label {
    width: 100%;
    margin-bottom: 5rpx;
  }
  
  .result-item {
    flex-direction: column;
  }
  
  .result-label {
    width: 100%;
    margin-bottom: 5rpx;
  }
}
