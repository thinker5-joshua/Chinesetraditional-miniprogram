.game-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f5dc 0%, #d2b48c 100%);
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: rgba(139, 69, 19, 0.9);
  color: white;
  border-bottom: 1rpx solid #ccc;
}

.nav-back {
  font-size: 32rpx;
  color: white;
  padding: 10rpx 20rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

.nav-placeholder {
  width: 80rpx;
}

/* 游戏内容区 */
.game-content {
  padding: 40rpx;
}

.game-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.game-intro {
  display: block;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 40rpx;
  color: #666;
  line-height: 1.6;
}

/* 二十八星宿游戏样式 */
.stars-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.star-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.star-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 10rpx;
}

.star-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 六十四卦游戏样式 */
.hexagram-container {
  text-align: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.hexagram-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  background: #f0f0f0;
  border-radius: 50%;
}

.hexagram-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.hexagram-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

/* 梦境诗游记样式 */
.poem-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  text-align: center;
}

.poem-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.poem-content {
  display: block;
  font-size: 30rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 30rpx;
  font-style: italic;
}

.poem-author {
  display: block;
  font-size: 28rpx;
  color: #888;
  margin-bottom: 40rpx;
}

/* 按钮样式 */
.next-btn {
  background: #8B4513;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.next-btn:active {
  background: #654321;
}

/* 占位符样式 */
.placeholder-game {
  text-align: center;
  padding: 80rpx 40rpx;
}

.placeholder-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.placeholder-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.placeholder-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  background: #f0f0f0;
  border-radius: 50%;
}