/* 琢器轩首页样式 */
/* 全局样式 */
page {
  font-family: 'Microsoft YaHei', 'SimSun', sans-serif;
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  color: #333;
  line-height: 1.6;
  padding: 0;
  min-height: 100vh;
  overflow-x: hidden;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  position: relative;
}

/* 页面头部 - 完全融入背景 */
.about-header {
  text-align: center;
  margin: 60rpx 0 120rpx 0;
  padding: 30rpx 40rpx;
  position: relative;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 15rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.sub-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  font-style: italic;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 游戏卡片容器 */
.games-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column-gap: 50rpx;
  grid-row-gap: 200rpx;
  margin-bottom: 60rpx;
  padding: 0 80rpx;
  flex: 0;
  align-content: start;
}

/* 游戏卡片样式 */
.game-card {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.95) 0%, rgba(245, 245, 245, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  border-radius: 30rpx;
  padding: 30rpx 25rpx;
  text-align: center;
  box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  min-height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  cursor: pointer;
}

.game-card:active {
  transform: scale(0.97);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.18);
  animation: clickFeedback 0.3s ease-out;
}

.game-card:hover {
  transform: translateY(-6rpx);
  box-shadow: 0 18rpx 45rpx rgba(0, 0, 0, 0.15);
}

@keyframes clickFeedback {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(0.95);
  }
  100% {
    transform: scale(0.97);
  }
}

/* 游戏图标 */
.game-icon {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #3498db 0%, #2c3e50 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.25);
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.game-card:active .game-icon {
  transform: scale(0.95);
}

.icon-text {
  font-size: 44rpx;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 六十四卦学习图标颜色 */
.yijing-icon {
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  box-shadow: 0 6rpx 20rpx rgba(139, 69, 19, 0.25);
}

/* 五行奥秘图标颜色 */
.wuxing-icon {
  background: linear-gradient(135deg, #FFD700 0%, #8B4513 100%);
  box-shadow: 0 6rpx 20rpx rgba(255, 215, 0, 0.25);
}

/* 洞天诗意游图标颜色 */
.poetry-icon {
  background: linear-gradient(135deg, #6C5CE7 0%, #A55EEA 100%);
  box-shadow: 0 6rpx 20rpx rgba(108, 92, 231, 0.25);
}

/* 二十八星宿图标颜色 */
.star-icon {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.25);
}

/* 成语消除图标颜色 */
.chengyu-icon {
  background: linear-gradient(135deg, #FF6B6B 0%, #C44569 100%);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.25);
}

/* 每日一字图标颜色 */
.character-icon {
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.25);
}

/* 游戏标题 */
.game-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
  line-height: 1.3;
  transition: color 0.3s ease;
}

.clickable {
  cursor: pointer;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .container {
    padding: 0 20rpx;
  }
  
  .main-title {
    font-size: 42rpx;
  }
  
  .sub-title {
    font-size: 26rpx;
  }
  
  .about-header {
    margin: 50rpx 0 120rpx 0;
    padding: 30rpx 40rpx;
  }
  
  .games-container {
    grid-template-columns: 1fr 1fr;
    gap: 40rpx;
    padding: 0 60rpx;
    margin-bottom: 50rpx;
  }
  
  .game-card {
    padding: 30rpx 20rpx;
    min-height: 200rpx;
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.95) 0%, rgba(245, 245, 245, 0.9) 100%);
  }
  
  .game-icon {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto 25rpx;
  }
  
  .icon-text {
    font-size: 42rpx;
  }
  
  .game-title {
    font-size: 32rpx;
    margin-bottom: 0;
  }
}

/* 超小屏适配 */
@media (max-width: 480rpx) {
  .about-header {
    margin: 40rpx 0 100rpx 0;
    padding: 25rpx 30rpx;
  }
  
  .main-title {
    font-size: 38rpx;
  }
  
  .sub-title {
    font-size: 24rpx;
  }
  
  .games-container {
    grid-template-columns: 1fr 1fr;
    gap: 30rpx;
    padding: 0 40rpx;
    margin-bottom: 40rpx;
  }
  
  .game-card {
    padding: 25rpx 15rpx;
    min-height: 180rpx;
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.95) 0%, rgba(245, 245, 245, 0.9) 100%);
  }
  
  .game-icon {
    width: 110rpx;
    height: 110rpx;
    margin: 0 auto 20rpx;
  }
  
  .icon-text {
    font-size: 38rpx;
  }
  
  .game-title {
    font-size: 30rpx;
    margin-bottom: 0;
  }
}