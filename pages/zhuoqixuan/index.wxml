<!-- 琢器轩首页 -->
<view class="container">
  <!-- 页面头部 -->
  <view class="about-header">
    <text class="main-title">琢器轩</text>
    <text class="sub-title">琢器成器，淬炼成长</text>
  </view>

  <!-- 游戏列表 -->
  <view class="games-container">
    <view 
      class="game-card"
      wx:for="{{gameList}}" 
      wx:key="id"
      bindtap="navigateToGame"
      data-game="{{item.id}}"
    >
      <view class="game-icon {{item.cssClass}}">
        <text class="icon-text">{{item.iconText}}</text>
      </view>
      <text class="game-title clickable">{{item.name}}</text>
    </view>
  </view>
</view>