/* 全局样式 */
page {
  background: linear-gradient(135deg, #f5f1e9 0%, #e8dfd2 100%);
  color: #333;
  font-family: 'Microsoft YaHei', 'SimSun', sans-serif;
  min-height: 100vh;
}

.about-container {
  padding: 40rpx 30rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 页面头部 */
.about-header {
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(139, 69, 19, 0.3);
  position: relative;
  overflow: hidden;
}

.about-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(30rpx, -30rpx) rotate(180deg); }
}

.header-content {
  position: relative;
  z-index: 2;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 15rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.sub-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  font-style: italic;
}

/* 内容部分 */
.content-section {
  margin-bottom: 50rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1);
}

.title-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
}

/* 内容卡片 */
.content-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1);
}

.content-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #555;
  display: block;
  margin-bottom: 20rpx;
  text-indent: 2em;
}

.content-text:last-child {
  margin-bottom: 0;
}

/* 特色功能网格 */
.feature-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.feature-item {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.feature-item:active {
  transform: translateY(-5rpx);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.15);
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
  display: block;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  display: block;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  line-height: 1.4;
}

/* 游戏列表 */
.game-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.game-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 30rpx;
  transition: all 0.3s ease;
}

.game-item:active {
  transform: translateX(10rpx);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.15);
}

.game-item .game-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  flex-shrink: 0;
}

.game-info {
  flex: 1;
}

.game-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.game-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  line-height: 1.4;
}

/* 不同游戏的图标颜色 */
.yijing-icon { background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%); }
.chengyu-icon { background: linear-gradient(135deg, #FF6B6B 0%, #C44569 100%); }
.star-icon { background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%); }
.poetry-icon { background: linear-gradient(135deg, #6C5CE7 0%, #A55EEA 100%); }
.wuxing-icon { background: linear-gradient(135deg, #FFD700 0%, #8B4513 100%); }
.root-icon { background: linear-gradient(135deg, #636E72 0%, #2D3436 100%); }

/* 联系信息 */
.contact-info {
  margin-top: 30rpx;
}

.contact-item {
  font-size: 26rpx;
  color: #555;
  display: block;
  margin-bottom: 15rpx;
  line-height: 1.6;
}

/* 底部信息 */
.footer {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
  border-top: 2rpx solid rgba(139, 69, 19, 0.2);
  margin-top: 60rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.version-text {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 20rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .about-container {
    padding: 30rpx 20rpx;
  }
  
  .main-title {
    font-size: 40rpx;
  }
  
  .sub-title {
    font-size: 24rpx;
  }
  
  .feature-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .game-item {
    flex-direction: column;
    text-align: center;
    gap: 20rpx;
  }
  
  .feature-icon {
    font-size: 40rpx;
  }
  
  .feature-title {
    font-size: 26rpx;
  }
  
  .feature-desc {
    font-size: 22rpx;
  }
}

/* 客服按钮样式 */
.customer-service {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.service-guide {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.contact-btn {
  transform: scale(1.2); /* 适当放大按钮 */
}

/* 添加到我的小程序样式 */
.add-to-miniprogram-card {
  background: linear-gradient(135deg, #fffaf0 0%, #f5f1e9 100%);
  border: 2rpx solid rgba(139, 69, 19, 0.2);
  transition: all 0.3s ease;
}

.add-to-miniprogram-card:hover {
  box-shadow: 0 15rpx 30rpx rgba(139, 69, 19, 0.2);
  transform: translateY(-5rpx);
}

.add-steps {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 15rpx;
  border-left: 6rpx solid #8B4513;
  transition: all 0.3s ease;
}

.step-item:active {
  transform: translateX(10rpx);
  box-shadow: 0 10rpx 20rpx rgba(139, 69, 19, 0.15);
}

.step-number {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 6rpx 15rpx rgba(139, 69, 19, 0.3);
}

.step-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
}

.step-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
  flex: 1;
}

/* 响应式设计 - 添加到我的小程序 */
@media (max-width: 750rpx) {
  .add-steps {
    gap: 20rpx;
  }
  
  .step-item {
    padding: 15rpx;
  }
  
  .step-number {
    width: 40rpx;
    height: 40rpx;
    font-size: 24rpx;
  }
  
  .step-icon {
    font-size: 28rpx;
  }
  
  .step-text {
    font-size: 24rpx;
  }
}